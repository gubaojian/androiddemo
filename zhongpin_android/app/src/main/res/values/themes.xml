<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.App" parent="Theme.AppCompat.Light.NoActionBar" >
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#FFFFFF</item>
        <item name="colorPrimaryDark">#FFFFFF</item>
        <item name="colorAccent">#557EF7</item>
        <item name="android:windowBackground">@color/bg_white</item>
        <item name="colorControlActivated">#557EF7</item>
    </style>

    <style name="Theme.Home" parent="Theme.AppCompat.Light.NoActionBar" >
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#FFFFFF</item>
        <item name="colorPrimaryDark">#FFFFFF</item>
        <item name="colorAccent">#557EF7</item>
        <item name="android:windowBackground">@color/bg_white</item>
        <item name="colorControlActivated">#557EF7</item>
    </style>
    <style name="Theme.LaunchThemeParent" parent="Theme.Home">
        <item name="android:windowBackground">@drawable/launch_background</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:navigationBarColor">@color/white</item>
    </style>

    <style name="Theme.LaunchTheme" parent="Theme.LaunchThemeParent">

    </style>

    <style name="Theme.Transparent" parent="Theme.LaunchThemeParent">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Theme.Splash.Overlay" parent="Theme.LaunchThemeParent">
        <!-- 背景透明 -->
        <item name="android:windowBackground">@null</item>
        <!-- 无标题栏 -->
        <item name="windowNoTitle">true</item>
        <!-- 全屏 -->
        <item name="android:windowFullscreen">true</item>
        <!-- 无进入/退出动画（避免切换闪烁） -->
        <item name="android:windowAnimationStyle">@null</item>
        <!-- 允许覆盖在其他Activity上 -->
        <item name="android:windowIsTranslucent">true</item>
    </style>


    <style name="Theme.Login" parent="Theme.AppCompat.Light.NoActionBar" >
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#F9F9F9</item>
        <item name="colorPrimaryDark">#F9F9F9</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/bg_F9F9F9</item>
        <item name="colorControlActivated">#557EF7</item>
    </style>

    <style name="Theme.Verify" parent="Theme.AppCompat.Light.NoActionBar" >
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#FFFFFF</item>
        <item name="colorPrimaryDark">#FFFFFF</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/bg_white</item>
        <item name="colorControlActivated">#557EF7</item>
    </style>

    <style name="Theme.White" parent="Theme.AppCompat.Light.NoActionBar" >
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#FFFFFF</item>
        <item name="colorPrimaryDark">#FFFFFF</item>
        <item name="colorAccent">#557EF7</item>
        <item name="android:windowBackground">@color/bg_white</item>
        <item name="colorControlActivated">#557EF7</item>
    </style>

    <style name="Theme.Gray" parent="Theme.AppCompat.Light.NoActionBar" >
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#F9F9F9</item>
        <item name="colorPrimaryDark">#F9F9F9</item>
        <item name="colorAccent">#557EF7</item>
        <item name="android:windowBackground">@color/bg_F9F9F9</item>
        <item name="colorControlActivated">#557EF7</item>
    </style>



    <style name="Theme.Green" parent="Theme.AppCompat.Light.NoActionBar" >
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#57C248</item>
        <item name="colorPrimaryDark">#57C248</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/bg_57C248</item>
    </style>

    <style name="Theme.White.BottomSheetActivity" parent="Theme.White">
        <!-- 设置进入和退出动画 -->
        <item name="android:windowAnimationStyle">@style/BottomSheetAnimation</item>
    </style>

    <style name="BottomSheetAnimation">
        <item name="android:activityOpenEnterAnimation">@anim/slide_up</item>
        <item name="android:activityOpenExitAnimation">@android:anim/fade_out</item>
        <item name="android:activityCloseEnterAnimation">@android:anim/fade_in</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_down</item>
    </style>

    <style name="ShouHuoButton">
        <item name="android:textColorPrimary">#333333</item>
        <item name="colorPrimary">#333333</item>
    </style>

    <style name="Theme.App.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Toolbar" parent="Widget.AppCompat.ActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_46</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="AppTheme.Toolbar.White" parent="AppTheme.Toolbar">
        <item name="android:background">@color/colorWhite</item>
    </style>

    <style name="Theme.Mall.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Mall.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="navTabBar">
        <item name="colorPrimary">#333333</item>
        <item name="colorPrimaryDark">#333333</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--没有选中的样式-->
    <style name="navTabBarNormalText">
        <item name="android:textColor">#999999</item>
        <item name="android:textSize">14dp</item>
    </style>
    <!--选中的样式-->
    <style name="navTabBarSelectedText">
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="SwitchButtonStyle">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="SwitchButtonStyleMD" parent="SwitchButtonMD">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="kswThumbDrawable">@drawable/setting_switch_md_back_thumb</item>
        <item name="kswBackColor">@drawable/setting_switch_md_back_color</item>
    </style>

    <style name="AlertDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>




</resources>