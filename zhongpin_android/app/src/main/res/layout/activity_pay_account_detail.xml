<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">
    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/toolbar"
            style="@style/AppTheme.Toolbar"
            android:background="@color/transparent">
            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/back_black" />
            <TextView
                android:id="@+id/iv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="账户余额"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#333333"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/loadContainer"
            android:orientation="vertical">
            <com.scwang.smart.refresh.layout.SmartRefreshLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/refresh_layout"
                android:background="#F9F9F9">
                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <com.zhongpin.mvvm_android.view.AspectRatioLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginHorizontal="@dimen/dp_10"
                            app:arl_widthRatio="355"
                            app:arl_heightRatio="120"
                            android:id="@+id/payAccountDetail"
                            android:visibility="invisible"
                            tools:visibility="visible">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@mipmap/account_detail_amount_bg"
                                android:scaleType="fitXY"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginTop="@dimen/dp_10">
                                <ImageView
                                    android:layout_width="@dimen/dp_16"
                                    android:layout_height="@dimen/dp_16"
                                    android:src="@mipmap/mine_waller_ic"
                                    android:layout_marginStart="@dimen/dp_15"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="预付款账户余额(元)"
                                    android:textColor="#ffffffff"
                                    android:textSize="14dp"
                                    android:textStyle="bold"
                                    android:layout_marginStart="@dimen/dp_4"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_weight="1">
                                    <TextView
                                        android:layout_marginStart="36dp"
                                        android:layout_marginBottom="8dp"
                                        android:id="@+id/remainAmount"
                                        android:layout_marginTop="8dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="000.00"
                                        android:textColor="#ffffffff"
                                        android:textSize="20dp"
                                        android:textStyle="bold"
                                        />
                                </LinearLayout>

                            </LinearLayout>
                            <TextView
                                android:id="@+id/companyName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="xx有限公司"
                                android:textColor="#ffffffff"
                                android:textSize="11dp"
                                android:layout_gravity="start|bottom"
                                android:layout_marginStart="@dimen/dp_36"
                                android:layout_marginBottom="@dimen/dp_20"
                                />
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_gravity="end|bottom"
                                android:layout_marginBottom="@dimen/dp_20">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="立即充值"
                                    android:textColor="#ffffffff"
                                    android:textSize="14dp"
                                    android:textStyle="bold"
                                    />
                                <ImageView
                                    android:layout_width="@dimen/dp_14"
                                    android:layout_height="@dimen/dp_14"
                                    android:src="@mipmap/see_money_amount_arrow"
                                    android:layout_marginStart="@dimen/dp_4"
                                    android:layout_marginEnd="20dp"/>
                            </LinearLayout>
                        </com.zhongpin.mvvm_android.view.AspectRatioLayout>
                        <LinearLayout
                            android:id="@+id/waitForPayContainer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_marginHorizontal="@dimen/dp_10"
                            android:orientation="vertical"
                            android:background="@drawable/bg_item_form"
                            android:visibility="gone"
                            tools:visibility="visible">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:paddingStart="@dimen/dp_15"
                                android:paddingEnd="@dimen/dp_15">
                                <ImageView
                                    android:layout_width="@dimen/dp_14"
                                    android:layout_height="@dimen/dp_14"
                                    android:src="@mipmap/account_detail_wait_for_pay"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="待支付"
                                    android:textColor="#ff333333"
                                    android:textSize="14dp"
                                    android:textStyle="bold"
                                    android:layout_marginStart="6dp"
                                    />
                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"/>
                                <com.zhongpin.mvvm_android.view.CountDownTextView
                                    android:id="@+id/waitForTime"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="剩余时间：11:59:28"
                                    android:textColor="#ff999999"
                                    android:textSize="12dp"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:paddingStart="@dimen/dp_15"
                                android:paddingEnd="@dimen/dp_15"
                                android:layout_marginBottom="@dimen/dp_10">
                                <TextView
                                    android:id="@+id/waitPayAmount"
                                    android:layout_marginStart="@dimen/dp_32"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="￥00.0"
                                    android:textColor="#ff557ef7"
                                    android:textSize="14dp"
                                    android:textStyle="bold"
                                    />
                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="查看"
                                    android:textColor="#ff333333"
                                    android:textSize="14dp"
                                    android:layout_marginEnd="4dp"
                                    />
                                <ImageView
                                    android:layout_width="@dimen/dp_18"
                                    android:layout_height="@dimen/dp_18"
                                    android:src="@mipmap/wait_for_pay_see_arrow"
                                    />
                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginTop="@dimen/dp_20">
                            <View
                                android:layout_width="4dp"
                                android:layout_height="@dimen/dp_16"
                                android:background="@drawable/bg_item_title_label"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="22dp"
                                android:text="收支明细"
                                android:gravity="center_vertical"
                                android:textColor="#ff333333"
                                android:textSize="16dp"
                                android:textStyle="bold"
                                android:layout_marginStart="6dp"/>
                            <View
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"/>
                            <FrameLayout
                                android:id="@+id/orderFilter"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:paddingStart="10dp"
                                android:paddingEnd="10dp">
                                <ImageView
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:src="@mipmap/order_filter_ic"
                                    android:layout_gravity="center"/>
                            </FrameLayout>
                            <LinearLayout
                                android:id="@+id/orderFilterQuery"
                                android:layout_width="wrap_content"
                                android:layout_height="28dp"
                                android:paddingHorizontal="8dp"
                                android:layout_marginEnd="10dp"
                                android:background="@drawable/bg_order_filter_item"
                                android:gravity="center"
                                android:visibility="gone">
                                <ImageView
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:src="@mipmap/order_filter_ic"
                                    android:layout_gravity="center"/>
                                <TextView
                                    android:id="@+id/orderFilterText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="近6个月"
                                    android:textColor="#ff333333"
                                    android:textSize="12dp"
                                    android:paddingStart="4dp"
                                    />
                            </LinearLayout>
                        </LinearLayout>
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerView"
                            android:layout_marginTop="@dimen/dp_12"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="40dp"
                            android:clipToPadding="false"/>
                    </LinearLayout>
                </androidx.core.widget.NestedScrollView>

            </com.scwang.smart.refresh.layout.SmartRefreshLayout>


        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/payFilterBottomView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom"/>
</FrameLayout>
