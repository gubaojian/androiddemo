<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
  <LinearLayout
      android:id="@+id/memberItem"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="@dimen/dp_10"
      android:background="@drawable/bg_member_item_all_corner"
      android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/dp_20">
      <de.hdodenhof.circleimageview.CircleImageView
          android:id="@+id/avatar"
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:src="@mipmap/ic_user_default"/>

      <LinearLayout
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:layout_marginHorizontal="@dimen/dp_15">
        <TextView
            android:id="@+id/memberName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="张三"
            android:textColor="#ff333333"
            android:textSize="14dp"
            />
        <com.zhongpin.mvvm_android.view.HorizontalPermissionListView
            android:id="@+id/permissionList"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="4dp"/>
      </LinearLayout>
      <ImageView
          android:id="@+id/editIcon"
          android:layout_width="@dimen/dp_16"
          android:layout_height="@dimen/dp_16"
          android:src="@mipmap/edit_member_item_ic" />
    </LinearLayout>

    <View
        android:id="@+id/bottomLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F3F3F3"/>
  </LinearLayout>
</FrameLayout>