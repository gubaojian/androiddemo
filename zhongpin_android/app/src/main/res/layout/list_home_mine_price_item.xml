<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="@dimen/dp_10"
        android:background="@drawable/bg_home_mine_price_item"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15"
        android:paddingTop="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_12"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="B323B"
                android:textColor="#ff333333"
                android:textSize="18dp"
                android:textStyle="bold"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/fluteText"
                android:layout_marginStart="4dp"
                android:background="@drawable/bg_flute_item"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:text="BC瓦"
                android:textColor="#ffffffff"
                android:textSize="11dp"
                android:textStyle="bold"
                android:gravity="center"
                android:paddingStart="@dimen/dp_6"
                android:paddingEnd="@dimen/dp_6"
                android:lineSpacingMultiplier="1.1"
                />
            <TextView
                android:id="@+id/tagSpecialPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="特价"
                android:textColor="#ffd83333"
                android:textSize="12dp"
                android:layout_marginStart="@dimen/dp_4"
                />
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/priceUpdateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已订购0次"
                android:textColor="#999999"
                android:textSize="12dp"
                />
            <ImageView
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_12"
                android:layout_marginStart="@dimen/dp_2"
                android:src="@mipmap/home_arrow"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_12"
            android:gravity="center_vertical">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:id="@+id/originPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥2.35"
                        android:textColor="#999999"
                        android:textSize="14dp"
                        />
                    <TextView
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="￥2.12"
                        android:textColor="#ff333333"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        />
                    <ImageView
                        android:id="@+id/priceArrow"
                        android:layout_width="@dimen/dp_16"
                        android:layout_height="@dimen/dp_16"
                        android:layout_marginStart="@dimen/dp_4"
                        android:src="@mipmap/home_platform_price_down"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/updateDate"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="xxxxxx"
                    android:textColor="#ff999999"
                    android:textSize="12dp"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/buyPriceItem"
                android:layout_width="72dp"
                android:layout_height="@dimen/dp_32"
                style="@style/NoShadow"
                android:background="@drawable/btn_gray_common_solid_selector"
                android:paddingHorizontal="7dp"
                android:gravity="center"
                android:text="订购"
                android:textColor="#557EF7"
                android:textStyle="bold"
                android:textSize="14dp"/>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>