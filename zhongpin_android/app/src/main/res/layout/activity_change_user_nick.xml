<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">
    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/toolbar"
            style="@style/AppTheme.Toolbar"
            android:background="@color/transparent">
            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/back_black" />
            <TextView
                android:id="@+id/iv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="编辑昵称"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#333333"/>
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="1dp"/>
            <TextView
                android:id="@+id/save"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="保存"
                android:textColor="#333333"
                android:textSize="16dp"
                android:textStyle="bold"
                android:paddingEnd="@dimen/dp_12"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/loadContainer"
            android:orientation="vertical">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#F9F9F9">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_item_form"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginHorizontal="@dimen/dp_10"
                        android:paddingBottom="@dimen/dp_15"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginTop="@dimen/dp_15"
                            android:layout_marginHorizontal="@dimen/dp_15">
                            <LinearLayout
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="#333333"
                                    android:textStyle="bold"
                                    android:textSize="14dp"
                                    android:text="昵称"/>
                            </LinearLayout>
                            <com.zhongpin.mvvm_android.view.FormItemFocusLinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="40dp"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:background="@drawable/form_item_edit_input_rect_circle_gray_bg_normal">
                                <EditText
                                    android:id="@+id/userNick"
                                    android:paddingStart="@dimen/dp_15"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:paddingTop="@dimen/dp_12"
                                    android:paddingBottom="10dp"
                                    android:layout_height="match_parent"
                                    android:background="@null"
                                    android:hint="请输入昵称"
                                    android:singleLine="true"
                                    android:textColor="#333333"
                                    android:textColorHint="#999999"
                                    android:textSize="16dp"
                                    android:gravity="center_vertical"
                                    android:inputType="textCapCharacters|text"
                                    android:maxLength="16"
                                    />
                                <TextView
                                    android:layout_marginHorizontal="@dimen/dp_15"
                                    android:id="@+id/userNickInputTip"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0/16"
                                    android:textColor="#ff999999"
                                    android:textSize="12dp"
                                    />
                            </com.zhongpin.mvvm_android.view.FormItemFocusLinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>

        </LinearLayout>
    </LinearLayout>
</FrameLayout>
