<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_bottom_sheet">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:text="确认收货"
            android:textColor="#ff333333"
            android:textSize="16dp"
            android:layout_gravity="center"
            android:textStyle="bold"
            />
        <FrameLayout
            android:id="@+id/closePopup"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|end"
            android:paddingStart="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10">
            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:src="@mipmap/bottom_sheet_close"
                android:layout_gravity="center"
                />
        </FrameLayout>
    </FrameLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F9F9F9"/>

    <LinearLayout
        android:id="@+id/countDownTextContainer"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_marginHorizontal="@dimen/dp_20"
            android:layout_height="wrap_content"
            android:text="请确认完成线下签收，数量核对无误。"
            android:textColor="#ff333333"
            android:textSize="14dp"
            android:gravity="center_horizontal"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/dp_12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_marginHorizontal="@dimen/dp_20"
            android:layout_height="wrap_content"
            android:text="注：若存在质量问题、数量不足等情况，\n可通过【历史订单】发起申诉"
            android:textColor="#999999"
            android:textSize="14dp"
            android:gravity="center_horizontal"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dp_40"
        android:paddingEnd="@dimen/dp_40">
        <Button
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_42"
            android:background="@drawable/btn_common_white_solid_selector"
            style="@style/NoShadow"
            android:padding="7dp"
            android:paddingTop="7dp"
            android:text="取消"
            android:textColor="#333333"
            android:textStyle="bold"
            android:textSize="16dp"/>
        <View
            android:layout_width="25dp"
            android:layout_height="1dp"/>
        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_42"
            android:background="@drawable/btn_blue_common_solid_selector"
            style="@style/RippleForeground"
            android:padding="7dp"
            android:paddingTop="7dp"
            android:text="确定"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="16dp"/>
    </LinearLayout>
    <View
        android:id="@+id/bottomBarSpace"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
</LinearLayout>