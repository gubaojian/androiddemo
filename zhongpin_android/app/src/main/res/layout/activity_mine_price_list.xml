<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">
    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/toolbar"
            style="@style/AppTheme.Toolbar"
            android:background="@color/transparent">
            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/back_black" />
            <TextView
                android:id="@+id/iv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="专属报价"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#333333"/>
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="1dp"/>
            <LinearLayout
                android:id="@+id/sortContainer"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@mipmap/mine_price_order_ic"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_marginStart="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="排序"
                    android:textColor="#333333"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:paddingEnd="@dimen/dp_12"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/loadContainer"
            android:orientation="vertical">
           <FrameLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent">
               <com.scwang.smart.refresh.layout.SmartRefreshLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:id="@+id/refresh_layout"
                   android:background="#F9F9F9">
                   <androidx.core.widget.NestedScrollView
                       android:layout_width="match_parent"
                       android:layout_height="match_parent">
                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="vertical">


                           <LinearLayout
                               android:id="@+id/tipContainer"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:layout_marginTop="@dimen/dp_10"
                               android:layout_marginHorizontal="@dimen/dp_10"
                               android:background="@drawable/bg_mine_price_tip"
                               android:orientation="vertical"
                               android:visibility="gone"
                               tools:visibility="visible">
                               <TextView
                                   android:layout_marginTop="@dimen/dp_10"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:gravity="center"
                                   android:text="特别说明"
                                   android:textColor="#ff557ef7"
                                   android:textSize="14dp"
                                   android:textStyle="bold"
                                   />

                               <LinearLayout
                                   android:layout_marginTop="@dimen/dp_10"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:layout_marginHorizontal="@dimen/dp_10"
                                   android:orientation="horizontal">
                                   <ImageView
                                       android:layout_width="@dimen/dp_6"
                                       android:layout_height="@dimen/dp_6"
                                       android:background="@drawable/bg_mine_price_tip_label"
                                       android:layout_marginTop="8dp"
                                       android:layout_marginEnd="4dp"/>
                                   <TextView
                                       android:id="@+id/tipsOne"
                                       android:layout_width="0dp"
                                       android:layout_weight="1"
                                       android:layout_height="wrap_content"
                                       android:text="单个订单面积大于1000㎡的减价0.02元/㎡，订单面积小于50㎡的加价0.5元/㎡。"
                                       android:textColor="#333333"
                                       android:textSize="14dp"
                                       />

                               </LinearLayout>
                               <LinearLayout
                                   android:layout_marginTop="@dimen/dp_4"
                                   android:layout_marginBottom="@dimen/dp_12"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:layout_marginHorizontal="@dimen/dp_10"
                                   android:orientation="horizontal">
                                   <ImageView
                                       android:layout_width="@dimen/dp_6"
                                       android:layout_height="@dimen/dp_6"
                                       android:background="@drawable/bg_mine_price_tip_label"
                                       android:layout_marginTop="8dp"
                                       android:layout_marginEnd="4dp"/>
                                   <TextView
                                       android:id="@+id/tipsTwo"
                                       android:layout_width="0dp"
                                       android:layout_weight="1"
                                       android:layout_height="wrap_content"
                                       android:text="订单尺寸小于（长500mm）或（宽200mm）在原价材质组合基础上加0.05元/㎡。"
                                       android:textColor="#333333"
                                       android:textSize="14dp"
                                       />

                               </LinearLayout>
                           </LinearLayout>
                           <androidx.recyclerview.widget.RecyclerView
                               android:id="@+id/recyclerView"
                               android:layout_marginTop="@dimen/dp_12"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:paddingBottom="40dp"
                               android:clipToPadding="false"/>
                           <View
                               android:id="@+id/bottomBarSpace"
                               android:layout_width="match_parent"
                               android:layout_height="0dp"/>
                       </LinearLayout>
                   </androidx.core.widget.NestedScrollView>

               </com.scwang.smart.refresh.layout.SmartRefreshLayout>
               <View
                   android:id="@+id/maskView"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:background="#4d000000"
                   android:visibility="gone"/>
           </FrameLayout>


        </LinearLayout>
    </LinearLayout>
</FrameLayout>
