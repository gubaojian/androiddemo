<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:gravity="center_vertical"
      android:layout_marginTop="@dimen/dp_15"
      android:layout_marginEnd="10dp">
    <View
        android:layout_width="4dp"
        android:layout_height="@dimen/dp_16"
        android:background="@drawable/bg_item_title_label"/>
    <TextView
        android:id="@+id/feedbackDate"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:text="2025-10-09 15:09"
        android:gravity="center_vertical"
        android:textColor="#ff333333"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginStart="6dp"/>
    <View
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="1dp"/>
    <TextView
        android:id="@+id/feedbackStatusCancel"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:paddingHorizontal="7dp"
        android:gravity="center"
        android:text="已取消"
        android:textColor="#999999"
        android:textSize="12dp"
        android:textStyle="bold"
        android:visibility="gone"
        tools:visibility="visible"
        />
    <TextView
        android:id="@+id/feedbackStatusIng"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:paddingHorizontal="7dp"
        android:background="@drawable/bg_order_feedback_ing"
        android:gravity="center"
        android:text="处理中"
        android:textColor="#ffffff"
        android:textSize="12dp"
        android:textStyle="bold"
        android:visibility="gone"
        tools:visibility="visible"
        />
    <TextView
        android:id="@+id/feedbackStatusDone"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:paddingHorizontal="7dp"
        android:background="@drawable/bg_order_feedback_done"
        android:gravity="center"
        android:text="已完成"
        android:textColor="#ffffff"
        android:textSize="12dp"
        android:textStyle="bold"
        android:visibility="gone"
        tools:visibility="visible"
        />
  </LinearLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:layout_marginHorizontal="@dimen/dp_10"
      android:background="@drawable/bg_order_item"
      android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dp_20"
        android:paddingEnd="@dimen/dp_20">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="申诉单号"
          android:textColor="#999999"
          android:textSize="14dp"
          />
      <View
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"/>
      <TextView
          android:id="@+id/feedbackNo"
          android:layout_width="wrap_content"
          android:layout_height="20dp"
          android:text="xxxxxxxxxxx"
          android:textColor="#ff333333"
          android:textSize="14dp"
          />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dp_20"
        android:paddingEnd="@dimen/dp_20">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="申诉类型"
          android:textColor="#999999"
          android:textSize="14dp"
          />
      <View
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"/>
      <TextView
          android:id="@+id/feedbackTypeText"
          android:layout_width="wrap_content"
          android:layout_height="20dp"
          android:text="xxxxxxxxxxx"
          android:textColor="#ff333333"
          android:textSize="14dp"
          />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dp_20"
        android:paddingEnd="@dimen/dp_20">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="处理方案"
          android:textColor="#999999"
          android:textSize="14dp"
          />
      <View
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"/>
      <TextView
          android:id="@+id/solutionTypeText"
          android:layout_width="wrap_content"
          android:layout_height="20dp"
          android:text="xxxxxxxxxxx"
          android:textColor="#ff333333"
          android:textSize="14dp"
          />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dp_20"
        android:paddingEnd="@dimen/dp_20">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="申诉数量"
          android:textColor="#999999"
          android:textSize="14dp"
          />
      <View
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"/>
      <TextView
          android:id="@+id/feedbackAmount"
          android:layout_width="wrap_content"
          android:layout_height="20dp"
          android:text="xxxxxxxxxxx"
          android:textColor="#ff333333"
          android:textSize="14dp"
          />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dp_20"
        android:paddingEnd="@dimen/dp_20">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="申诉金额"
          android:textColor="#999999"
          android:textSize="14dp"
          />
      <View
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"/>
      <TextView
          android:id="@+id/feedbackMoneyAmount"
          android:layout_width="wrap_content"
          android:layout_height="20dp"
          android:text="xxxxxxxxxxx"
          android:textColor="#ff333333"
          android:textSize="14dp"
          />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="41dp"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dp_20"
        android:paddingEnd="@dimen/dp_20"
        android:paddingVertical="@dimen/dp_12">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="问题描述"
          android:textColor="#999999"
          android:textSize="14dp"
          />
      <TextView
          android:id="@+id/feedbackDesc"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="wrap_content"
          android:gravity="end"
          android:text="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
          android:textColor="#ff333333"
          android:textSize="14dp"
          android:maxLines="32"
          android:layout_marginStart="32dp"
          />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dp_20"
        android:paddingEnd="@dimen/dp_10"
        android:paddingVertical="@dimen/dp_12">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="申诉凭证"
          android:textColor="#999999"
          android:textSize="14dp"
          />
      <View
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="1dp"
      />
      <com.zhongpin.mvvm_android.ui.order.feedback.list.FeedbackGridImageViewer
          android:id="@+id/feedbackPhotos"
          android:layout_width="75dp"
          android:layout_height="75dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/deliveryPhotosContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dp_20"
        android:paddingEnd="@dimen/dp_10"
        android:paddingVertical="@dimen/dp_12">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="发货凭证"
          android:textColor="#999999"
          android:textSize="14dp"
          />
      <View
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="1dp"
          />
      <com.zhongpin.mvvm_android.ui.order.feedback.list.FeedbackGridImageViewer
          android:id="@+id/deliveryPhotos"
          android:layout_width="75dp"
          android:layout_height="75dp"/>
    </LinearLayout>
  </LinearLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_marginTop="@dimen/dp_15"
      android:layout_marginHorizontal="10dp">
    <View
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="1dp"/>
    <TextView
        android:id="@+id/cancelFeedback"
        android:layout_width="72dp"
        android:layout_height="32dp"
        android:background="@drawable/bg_small_white_button_item"
        android:gravity="center"
        android:text="撤销申诉"
        android:textColor="#ffd83333"
        android:textSize="14dp"
        android:layout_marginEnd="16dp"/>
    <TextView
        android:id="@+id/editFeedback"
        android:layout_width="72dp"
        android:layout_height="32dp"
        android:background="@drawable/bg_small_white_button_item"
        android:gravity="center"
        android:text="修改"
        android:textColor="#ff333333"
        android:textSize="14dp"
        android:layout_marginEnd="16dp"/>
    <TextView
        android:id="@+id/contractKeFu"
        android:layout_width="72dp"
        android:layout_height="32dp"
        android:background="@drawable/bg_small_white_button_item"
        android:gravity="center"
        android:text="联系客服"
        android:textColor="#ff333333"
        android:textSize="14dp"/>
  </LinearLayout>
  <View
      android:layout_width="match_parent"
      android:layout_height="5dp"/>
</LinearLayout>