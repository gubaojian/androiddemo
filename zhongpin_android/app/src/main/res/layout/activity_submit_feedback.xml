<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/toolbar"
            style="@style/AppTheme.Toolbar"
            android:background="@color/transparent">
            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/back_black" />
            <TextView
                android:id="@+id/iv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提交申诉"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#333333"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/loadContainer"
            android:orientation="vertical">
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#F9F9F9">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/bg_item_form"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginHorizontal="10dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_88"
                            android:orientation="vertical"
                            android:id="@+id/feedbackTypes">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_20"
                                android:orientation="horizontal"
                                android:layout_marginTop="@dimen/dp_20"
                                android:layout_marginHorizontal="@dimen/dp_20"
                                android:gravity="center_vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:textColor="#D34545"
                                    android:textSize="14dp"
                                    android:text="*"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="#333333"
                                    android:textStyle="bold"
                                    android:textSize="14dp"
                                    android:text="申诉类型"
                                    android:layout_marginStart="4dp"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_marginTop="@dimen/dp_2"
                                android:layout_width="match_parent"
                                android:layout_height="44dp"
                                android:layout_marginHorizontal="@dimen/dp_20"
                                android:paddingTop="@dimen/dp_12"
                                android:paddingBottom="10dp"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">
                                <TextView
                                    android:id="@+id/feedbackTypeText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="22dp"
                                    android:hint="选择申诉类型"
                                    android:singleLine="true"
                                    android:textColor="#333333"
                                    android:textColorHint="#999999"
                                    android:textSize="16dp"/>
                                <View
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="match_parent"/>
                                <ImageView
                                    android:layout_width="@dimen/dp_16"
                                    android:layout_height="@dimen/dp_16"
                                    android:src="@mipmap/choose_arrow_right"/>
                            </LinearLayout>
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#F3F3f3"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_88"
                            android:orientation="vertical"
                            android:id="@+id/solutionTypes">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_20"
                                android:orientation="horizontal"
                                android:layout_marginTop="@dimen/dp_20"
                                android:layout_marginHorizontal="@dimen/dp_20"
                                android:gravity="center_vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:textColor="#D34545"
                                    android:textSize="14dp"
                                    android:text="*"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="#333333"
                                    android:textStyle="bold"
                                    android:textSize="14dp"
                                    android:text="处理方案"
                                    android:layout_marginStart="4dp"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_marginTop="@dimen/dp_2"
                                android:layout_width="match_parent"
                                android:layout_height="44dp"
                                android:layout_marginHorizontal="@dimen/dp_20"
                                android:paddingTop="@dimen/dp_12"
                                android:paddingBottom="10dp"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">
                                <TextView
                                    android:id="@+id/solutionTypeText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="22dp"
                                    android:hint="选择处理方案"
                                    android:singleLine="true"
                                    android:textColor="#333333"
                                    android:textColorHint="#999999"
                                    android:textSize="16dp"/>
                                <View
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="match_parent"/>
                                <ImageView
                                    android:layout_width="@dimen/dp_16"
                                    android:layout_height="@dimen/dp_16"
                                    android:src="@mipmap/choose_arrow_right"/>
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>
                  <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_item_form"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginHorizontal="10dp">
                      <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="@dimen/dp_88"
                          android:orientation="vertical">
                          <LinearLayout
                              android:layout_width="match_parent"
                              android:layout_height="@dimen/dp_20"
                              android:orientation="horizontal"
                              android:layout_marginTop="@dimen/dp_20"
                              android:layout_marginHorizontal="@dimen/dp_20"
                              android:gravity="center_vertical">
                              <TextView
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:textColor="#333333"
                                  android:textStyle="bold"
                                  android:textSize="14dp"
                                  android:text="申诉数量"
                                  android:layout_marginStart="4dp"/>
                          </LinearLayout>
                          <EditText
                              android:id="@+id/feedbackAmount"
                              android:layout_marginTop="@dimen/dp_2"
                              android:layout_width="match_parent"
                              android:layout_height="44dp"
                              android:layout_marginHorizontal="@dimen/dp_20"
                              android:background="@null"
                              android:hint="请输入需要申诉的货物数量"
                              android:singleLine="true"
                              android:textColor="#333333"
                              android:textColorHint="#999999"
                              android:textSize="16dp"
                              android:inputType="number"
                              android:digits="0123456789"
                              android:maxLength="10"/>
                      </LinearLayout>
                      <View
                          android:layout_width="match_parent"
                          android:layout_height="1dp"
                          android:background="#F3F3f3"/>
                      <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="@dimen/dp_88"
                          android:orientation="vertical">
                          <LinearLayout
                              android:layout_width="match_parent"
                              android:layout_height="@dimen/dp_20"
                              android:orientation="horizontal"
                              android:layout_marginTop="@dimen/dp_20"
                              android:layout_marginHorizontal="@dimen/dp_20"
                              android:gravity="center_vertical">
                              <TextView
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:textColor="#333333"
                                  android:textStyle="bold"
                                  android:textSize="14dp"
                                  android:text="申诉金额"
                                  android:layout_marginStart="4dp"/>
                          </LinearLayout>
                          <EditText
                              android:id="@+id/feedbackMoneyAmount"
                              android:layout_marginTop="@dimen/dp_2"
                              android:layout_width="match_parent"
                              android:layout_height="44dp"
                              android:layout_marginHorizontal="@dimen/dp_20"
                              android:background="@null"
                              android:hint="请输入需要申诉的金额"
                              android:singleLine="true"
                              android:textColor="#333333"
                              android:textColorHint="#999999"
                              android:textSize="16dp"
                              android:inputType="numberDecimal"
                              android:maxLength="11"/>
                      </LinearLayout>
                      <View
                          android:layout_width="match_parent"
                          android:layout_height="1dp"
                          android:background="#F3F3f3"/>
                      <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical">
                          <LinearLayout
                              android:layout_width="match_parent"
                              android:layout_height="@dimen/dp_20"
                              android:orientation="horizontal"
                              android:layout_marginTop="@dimen/dp_20"
                              android:layout_marginHorizontal="@dimen/dp_20"
                              android:gravity="center_vertical">
                              <TextView
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:textColor="#333333"
                                  android:textStyle="bold"
                                  android:textSize="14dp"
                                  android:text="问题描述"
                                  android:layout_marginStart="4dp"/>
                          </LinearLayout>
                          <EditText
                              android:id="@+id/feedbackDesc"
                              android:layout_marginTop="@dimen/dp_12"
                              android:layout_marginBottom="@dimen/dp_20"
                              android:layout_width="match_parent"
                              android:layout_height="64dp"
                              android:layout_marginHorizontal="@dimen/dp_20"
                              android:gravity="top|start"
                              android:background="@null"
                              android:hint="请详细描述一下您的申诉请求"
                              android:maxLines="3"
                              android:maxLength="200"
                              android:textColor="#333333"
                              android:textColorHint="#999999"
                              android:textSize="16dp"/>
                      </LinearLayout>
                  </LinearLayout>



                  <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginHorizontal="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_10"
                        android:background="@drawable/bg_item_form">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/dp_16"
                            android:layout_marginHorizontal="@dimen/dp_15"
                            android:gravity="center_vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textColor="#D34545"
                                android:textSize="14dp"
                                android:text="*"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#333333"
                                android:textStyle="bold"
                                android:textSize="14dp"
                                android:text="申诉凭证"
                                android:layout_marginStart="4dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="（上传申诉凭证，如发货单、货物照片等）"
                                android:textColor="#ff999999"
                                android:textSize="12dp"
                                android:layout_marginStart="2dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="@dimen/dp_12"
                            android:layout_marginHorizontal="@dimen/dp_9"
                            android:layout_marginBottom="@dimen/dp_20">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/uploadImageRecyclerView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:clipToPadding="false"
                                android:overScrollMode="never"/>

                        </LinearLayout>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="50dp"/>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btnSubmit"
                    android:layout_width="135dp"
                    android:layout_height="@dimen/dp_42"
                    android:background="@drawable/btn_blue_common_solid_selector"
                    android:padding="7dp"
                    android:paddingTop="7dp"
                    android:text="提交"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="16dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
