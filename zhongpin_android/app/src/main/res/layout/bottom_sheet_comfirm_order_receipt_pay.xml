<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_bottom_sheet">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:text="支付差价"
            android:textColor="#ff333333"
            android:textSize="16dp"
            android:layout_gravity="center"
            android:textStyle="bold"
            />
        <FrameLayout
            android:id="@+id/closePopup"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|end"
            android:paddingStart="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10">
            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:src="@mipmap/bottom_sheet_close"
                android:layout_gravity="center"
                />
        </FrameLayout>
    </FrameLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F9F9F9"/>
    <TextView
        android:layout_marginTop="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="待支付"
        android:textColor="#ff1e1e1e"
        android:textSize="14dp"
        android:gravity="center_horizontal"
        />
    <TextView
        android:id="@+id/payAmount"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="￥0.0"
        android:textColor="#ff333333"
        android:textSize="36dp"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        />
    <LinearLayout
        android:layout_marginTop="@dimen/dp_12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/messageTip"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="@dimen/dp_15"
            android:layout_height="wrap_content"
            android:text="该订单存在额外配送情况，超额数量为 23 件，需补交差价。【支付并签收】后将从企业账户（预付款）余额扣除对应金额。"
            android:textColor="#ff333333"
            android:textSize="12dp"
            android:gravity="center_horizontal"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dp_40"
        android:paddingEnd="@dimen/dp_40">
        <Button
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_42"
            android:background="@drawable/btn_common_white_solid_selector"
            style="@style/NoShadow"
            android:padding="7dp"
            android:paddingTop="7dp"
            android:text="取消"
            android:textColor="#333333"
            android:textStyle="bold"
            android:textSize="16dp"/>
        <View
            android:layout_width="25dp"
            android:layout_height="1dp"/>
        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_42"
            android:background="@drawable/btn_blue_common_solid_selector"
            style="@style/RippleForeground"
            android:padding="7dp"
            android:paddingTop="7dp"
            android:text="支付并签收"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="16dp"/>
    </LinearLayout>
    <View
        android:id="@+id/bottomBarSpace"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
</LinearLayout>