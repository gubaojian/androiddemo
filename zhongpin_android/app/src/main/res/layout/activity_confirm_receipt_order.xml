<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/toolbar"
            style="@style/AppTheme.Toolbar"
            android:background="@color/transparent">
            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@mipmap/back_black" />
            <TextView
                android:id="@+id/iv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确认收货"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#333333"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:id="@+id/body">
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#F9F9F9">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="@dimen/dp_15">
                        <View
                            android:layout_width="4dp"
                            android:layout_height="@dimen/dp_16"
                            android:background="@drawable/bg_item_title_label"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="22dp"
                            android:text="订单信息"
                            android:gravity="center_vertical"
                            android:textColor="#ff333333"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:layout_marginStart="6dp"/>
                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginHorizontal="@dimen/dp_10"
                        android:background="@drawable/bg_order_item"
                        android:paddingEnd="@dimen/dp_15"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:id="@+id/waBg"
                                android:layout_marginVertical="@dimen/dp_15"
                                android:layout_marginStart="@dimen/dp_15"
                                android:layout_width="@dimen/dp_80"
                                android:layout_height="@dimen/dp_50"
                                android:orientation="vertical"
                                android:background="@drawable/bg_wa_item">
                                <TextView
                                    android:id="@+id/name"
                                    android:layout_marginTop="2dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_horizontal"
                                    android:text="xxxx"
                                    android:textColor="#557EF7"
                                    android:textStyle="bold"
                                    android:maxLines="1"
                                    android:textSize="@dimen/dp_16"
                                    />
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"/>
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/fluteText"
                                    android:layout_marginHorizontal="2dp"
                                    android:layout_marginBottom="@dimen/dp_2"
                                    android:background="@drawable/bg_wa_code_item"
                                    android:layout_width="match_parent"
                                    android:layout_height="18dp"
                                    android:text="X瓦"
                                    android:textColor="#557EF7"
                                    android:textSize="12dp"
                                    android:textStyle="bold"
                                    android:gravity="center"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp_15"
                                android:orientation="vertical">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="数量："
                                        android:textColor="#ff999999"
                                        android:textSize="14dp"
                                        />
                                    <TextView
                                        android:id="@+id/purchaseAmount"
                                        android:layout_width="wrap_content"
                                        android:layout_height="20dp"
                                        android:text="0张"
                                        android:textColor="#ff333333"
                                        android:textSize="14dp"
                                        android:textStyle="bold"
                                        />
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="@dimen/dp_8"
                                    android:gravity="center_vertical">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="规格："
                                        android:textColor="#ff999999"
                                        android:textSize="14dp"
                                        />
                                    <TextView
                                        android:id="@+id/paperSize"
                                        android:layout_width="wrap_content"
                                        android:layout_height="20dp"
                                        android:text="0mm*0mm"
                                        android:textColor="#ff333333"
                                        android:textSize="14dp"
                                        android:textStyle="bold"
                                        />
                                </LinearLayout>

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="end">

                                <TextView
                                    android:id="@+id/price"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="￥0.00"
                                    android:textColor="#333333"
                                    android:textSize="16dp"
                                    android:textStyle="bold" />
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="@dimen/dp_12"
                                    android:gravity="center_vertical"
                                    android:visibility="invisible">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="详情"
                                        android:textColor="#ff999999"
                                        android:textSize="12dp" />
                                    <ImageView
                                        android:layout_width="@dimen/dp_12"
                                        android:layout_height="@dimen/dp_12"
                                        android:layout_marginStart="@dimen/dp_2"
                                        android:src="@mipmap/order_detail_gray_arrow"/>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="@dimen/dp_15">
                        <View
                            android:layout_width="4dp"
                            android:layout_height="@dimen/dp_16"
                            android:background="@drawable/bg_item_title_label"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="22dp"
                            android:text="签收入库信息"
                            android:gravity="center_vertical"
                            android:textColor="#ff333333"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:layout_marginStart="6dp"/>
                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/bg_item_form"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginHorizontal="@dimen/dp_10">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_72">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center">
                                <TextView
                                    android:id="@+id/hasSignAmount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="889张"
                                    android:textColor="#ff333333"
                                    android:textSize="16dp"
                                    android:textStyle="bold"
                                    />
                                <TextView
                                    android:layout_marginTop="@dimen/dp_2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="已签收数量"
                                    android:textColor="#ff999999"
                                    android:textSize="12dp"
                                    />
                            </LinearLayout>
                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="#F3F3F3"/>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center">
                                <TextView
                                    android:id="@+id/hasStoreAmount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="889张"
                                    android:textColor="#ff333333"
                                    android:textSize="16dp"
                                    android:textStyle="bold"
                                    />
                                <TextView
                                    android:layout_marginTop="@dimen/dp_2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="已入库数量"
                                    android:textColor="#ff999999"
                                    android:textSize="12dp"
                                    />
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/extraPriceInfo"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_40"
                            android:background="@drawable/bg_diff_item">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:gravity="start|center_vertical"
                                android:layout_marginStart="@dimen/dp_10">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="额外配送："
                                    android:textColor="#ff333333"
                                    android:textSize="14dp"
                                    />
                                <TextView
                                    android:id="@+id/extraAmount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="23"
                                    android:textColor="#557EF7"
                                    android:textSize="14dp"
                                    android:textStyle="bold"
                                    android:singleLine="true"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="张"
                                    android:textColor="#ff333333"
                                    android:textSize="14dp"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:gravity="end|center_vertical"
                                android:layout_marginEnd="@dimen/dp_10">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="应付差价："
                                    android:textColor="#ff333333"
                                    android:textSize="14dp"
                                    />
                                <TextView
                                    android:id="@+id/extraPayPrice"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="￥2333.33"
                                    android:textColor="#557EF7"
                                    android:textSize="14dp"
                                    android:textStyle="bold"
                                    />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="@dimen/dp_20">
                        <View
                            android:layout_width="4dp"
                            android:layout_height="@dimen/dp_16"
                            android:background="@drawable/bg_item_title_label"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="22dp"
                            android:text="本次签收数量"
                            android:gravity="center_vertical"
                            android:textColor="#ff333333"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:layout_marginStart="6dp"/>
                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1"/>
                    </LinearLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/orderListRecyclerView"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:clipToPadding="false"
                        android:overScrollMode="never"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="40dp"/>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
            <LinearLayout
                android:id="@+id/bottomButtonsContainer"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="本次签收数量："
                    android:textColor="#ff333333"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/unSignNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="x件"
                    android:textColor="#ffd83333"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    />
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/btnSubmit"
                    android:layout_width="120dp"
                    android:layout_height="@dimen/dp_42"
                    android:background="@drawable/btn_blue_common_solid_selector"
                    android:padding="7dp"
                    android:text="确认收货"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="16dp"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/bottomSheetAnchorView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom"/>
</FrameLayout>
