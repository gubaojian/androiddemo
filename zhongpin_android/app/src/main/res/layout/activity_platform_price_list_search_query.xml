<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">
    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <FrameLayout
            android:id="@+id/toolbar"
            style="@style/AppTheme.Toolbar.White"
            android:layout_width="match_parent">
            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/back_black" />
            <LinearLayout
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_36"
                android:background="@drawable/bg_search_input"
                android:layout_marginStart="44dp"
                android:layout_marginEnd="10dp"
                android:gravity="center_vertical">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginHorizontal="@dimen/dp_10"
                    android:id="@+id/searchBar"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:src="@mipmap/search_order_ic"
                        android:layout_marginStart="@dimen/dp_10"/>
                    <EditText
                        android:id="@+id/searchInput"
                        android:background="@null"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text=""
                        android:hint="原纸品名/材质代码/克重"
                        android:textColorHint="#999999"
                        android:textColor="#ff333333"
                        android:textSize="14dp"
                        android:paddingStart="@dimen/dp_10"
                        android:paddingEnd="@dimen/dp_10"
                        />
                    <FrameLayout
                        android:id="@+id/clearIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="4dp"
                        android:paddingEnd="2dp"
                        android:paddingVertical="4dp"
                        android:visibility="gone"
                        tools:visibility="visible">
                        <ImageView
                            android:layout_width="@dimen/dp_16"
                            android:layout_height="@dimen/dp_16"
                            android:src="@mipmap/search_input_clear_ic"/>
                    </FrameLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_28"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_search_button_blue"
                    style="@style/RippleForeground"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:layout_marginEnd="10dp"
                    android:id="@+id/searchButton">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="搜索"
                        android:textColor="#ffffff"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        />
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#F9F9F9">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/historyContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginStart="15dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_marginHorizontal="@dimen/dp_20"
                            android:text="搜索历史"
                            android:textColor="#ff333333"
                            android:textSize="14dp"
                            android:textStyle="bold"
                            />
                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1"/>
                       <FrameLayout
                           android:id="@+id/clearHistoryContainer"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:paddingLeft="@dimen/dp_8"
                           android:paddingRight="@dimen/dp_15">
                           <ImageView
                               android:layout_width="@dimen/dp_18"
                               android:layout_height="@dimen/dp_18"
                               android:src="@mipmap/clean_search_history"/>
                       </FrameLayout>
                    </LinearLayout>
                    <com.nex3z.flowlayout.FlowLayout
                        android:id="@+id/flowLayout"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_marginHorizontal="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:flChildSpacing="10dp"
                        app:flChildSpacingForLastRow="10dp"
                        app:flRowSpacing="10dp">
                        <TextView
                            android:background="@drawable/bg_history_label_item"
                            android:gravity="center"
                            android:paddingHorizontal="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_32"
                            android:text="2921431275023564"
                            android:textColor="#ff333333"
                            android:textSize="14dp"/>

                        <TextView
                            android:background="@drawable/bg_history_label_item"
                            android:gravity="center"
                            android:paddingHorizontal="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_32"
                            android:text="B323B"
                            android:textColor="#ff333333"
                            android:textSize="14dp"/>

                    </com.nex3z.flowlayout.FlowLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="100dp"></View>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</FrameLayout>
