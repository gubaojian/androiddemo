<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.zhongpin.mvvm_android.view.AspectRatioLayout
        android:id="@+id/waItemContainer"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="9dp"
        app:arl_widthRatio="100"
        app:arl_heightRatio="110"
        android:background="@drawable/bg_wa_len_type_item_normal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/labelText"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EBç“¦"
                android:textColor="#ff333333"
                android:textSize="14dp"
                android:tag="labelText"
                />
            <ImageView
                android:id="@+id/labelImage"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="10dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scaleType="fitCenter">
            </ImageView>
        </LinearLayout>

    </com.zhongpin.mvvm_android.view.AspectRatioLayout>

</FrameLayout>