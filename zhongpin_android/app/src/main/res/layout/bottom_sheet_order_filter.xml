<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_bottom_sheet">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:text="订单筛选"
            android:textColor="#ff333333"
            android:textSize="16dp"
            android:layout_gravity="center"
            android:textStyle="bold"
            />
        <FrameLayout
            android:id="@+id/closePopup"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|end"
            android:paddingStart="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10">
            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:src="@mipmap/bottom_sheet_close"
                android:layout_gravity="center"
                />
        </FrameLayout>
    </FrameLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F9F9F9"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="下单时间"
        android:textColor="#ff333333"
        android:textSize="14dp"
        android:textStyle="bold"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/labelAll"
            android:background="@drawable/bg_order_filter_month_item_selected"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:text="全部"
            android:gravity="center"
            android:textColor="#557EF7"
            android:textSize="14dp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/labelOneWeek"
            android:background="@drawable/bg_order_filter_month_item_normal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:text="近1周"
            android:gravity="center"
            android:textColor="#ff333333"
            android:textSize="14dp"
            android:layout_marginStart="@dimen/dp_8"
            />
        <TextView
            android:id="@+id/labelOneMonth"
            android:background="@drawable/bg_order_filter_month_item_normal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:text="近1个月"
            android:gravity="center"
            android:textColor="#ff333333"
            android:textSize="14dp"
            android:layout_marginStart="@dimen/dp_8"
            />
        <TextView
            android:id="@+id/labelSixMonth"
            android:background="@drawable/bg_order_filter_month_item_normal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="近6个月"
            android:textColor="#ff333333"
            android:textSize="14dp"
            android:layout_marginStart="@dimen/dp_8"
            />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="自定义"
        android:textColor="#ff333333"
        android:textSize="14dp"
        android:textStyle="bold"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/startDate"
            android:background="@drawable/bg_order_filter_date_item"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:hint="选择起始时间"
            android:textColorHint="#999999"
            android:gravity="center"
            android:textColor="#ff333333"
            android:textSize="14dp"
            android:layout_marginStart="@dimen/dp_8"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textColor="#ff333333"
            android:textSize="14dp"
            android:layout_marginHorizontal="8dp"
            />
        <TextView
            android:id="@+id/endDate"
            android:background="@drawable/bg_order_filter_date_item"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:hint="选择结束时间"
            android:textColorHint="#999999"
            android:gravity="center"
            android:textColor="#ff333333"
            android:textSize="14dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dp_40"
        android:paddingEnd="@dimen/dp_40">
        <Button
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_42"
            android:background="@drawable/btn_common_white_solid_selector"
            style="@style/NoShadow"
            android:padding="7dp"
            android:paddingTop="7dp"
            android:text="清空"
            android:textColor="#333333"
            android:textStyle="bold"
            android:textSize="16dp"/>
        <View
            android:layout_width="25dp"
            android:layout_height="1dp"/>
        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_42"
            android:background="@drawable/btn_blue_common_solid_selector"
            style="@style/RippleForeground"
            android:padding="7dp"
            android:paddingTop="7dp"
            android:text="确定"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="16dp"/>
    </LinearLayout>
</LinearLayout>