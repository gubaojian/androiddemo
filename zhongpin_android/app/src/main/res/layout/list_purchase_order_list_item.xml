<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
  <LinearLayout
      android:id="@+id/payOrderItem"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="@dimen/dp_10"
      android:layout_marginBottom="@dimen/dp_10"
      android:background="@drawable/bg_pay_order_item_all_corner"
      android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_5"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10">
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:gravity="center_vertical"
          android:layout_marginStart="@dimen/dp_15">
        <ImageView
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_14"
            android:src="@mipmap/icon_zhibancaigou"
            android:layout_marginEnd="4dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="纸板订购单"
            android:textColor="#ff557ef7"
            android:textSize="14dp"
            />
      </LinearLayout>
      <View
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"/>
      <com.zhongpin.mvvm_android.view.CountDownTextView
          android:id="@+id/waitPayStatusText"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="8dp"
          android:text="待支付（00:29:59）"
          android:textColor="#D83333"
          android:textSize="12dp"
          android:layout_marginEnd="4dp"/>
      <TextView
          android:id="@+id/statusText"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="8dp"
          android:text="已取消"
          android:textColor="#999999"
          android:textSize="12dp"
          android:layout_marginEnd="4dp"/>
      <ImageView
          android:layout_width="@dimen/dp_12"
          android:layout_height="@dimen/dp_12"
          android:layout_marginStart="@dimen/dp_2"
          android:src="@mipmap/order_detail_gray_arrow"
          android:layout_marginEnd="15dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_15"
        android:orientation="horizontal">
      <com.zhongpin.mvvm_android.ui.order.purchaselist.view.HorizontalWaItemListViewer
          android:id="@+id/purchaseOrderItemRecyclerView"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="match_parent"/>
      <LinearLayout
          android:layout_width="60dp"
          android:layout_height="match_parent"
          android:gravity="center">
        <TextView
            android:id="@+id/itemTotalOrderAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="共99条"
            android:textColor="#ff999999"
            android:textSize="12dp"
            />
      </LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="10dp"
        android:id="@+id/buyDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2025-10-09 19:23:34"
        android:textColor="#ff999999"
        android:textSize="12dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:gravity="center_vertical"
        android:layout_marginHorizontal="@dimen/dp_10">
      <View
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"/>
      <TextView
          android:id="@+id/cancelOrder"
          android:gravity="center"
          android:background="@drawable/order_item_op_gray_button"
          android:layout_width="@dimen/dp_72"
          android:layout_height="@dimen/dp_32"
          android:text="取消订单"
          android:textColor="#ff333333"
          android:textSize="14dp"
          android:layout_marginEnd="@dimen/dp_10"
          />
      <TextView
          android:id="@+id/buyAgain"
          android:gravity="center"
          android:background="@drawable/order_item_op_gray_button"
          android:layout_width="@dimen/dp_72"
          android:layout_height="@dimen/dp_32"
          android:text="再来一单"
          android:textColor="#ff333333"
          android:textSize="14dp"
          android:layout_marginEnd="@dimen/dp_10"
          />
      <TextView
          android:id="@+id/payOrder"
          android:gravity="center"
          android:background="@drawable/order_item_op_blue_button"
          android:layout_width="@dimen/dp_72"
          android:layout_height="@dimen/dp_32"
          android:text="立即支付"
          android:textColor="#ff557ef7"
          android:textSize="14dp"
          />
    </LinearLayout>
  </LinearLayout>
</FrameLayout>