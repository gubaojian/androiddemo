<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">
    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/toolbar"
            style="@style/AppTheme.Toolbar"
            android:background="@color/transparent">
            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/back_black" />
            <TextView
                android:id="@+id/iv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="账单详情"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#333333"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/loadContainer"
            android:orientation="vertical">
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#F9F9F9">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginHorizontal="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_10"
                        android:background="@drawable/bg_item_form"
                        android:paddingBottom="@dimen/dp_10">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center_horizontal">
                            <TextView
                                android:id="@+id/payDesc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="预付款充值"
                                android:textColor="#ff333333"
                                android:textSize="14dp"
                                android:layout_marginTop="@dimen/dp_20"
                                />
                            <TextView
                                android:id="@+id/payAmount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0.0"
                                android:gravity="center_vertical"
                                android:textColor="#ff333333"
                                android:textSize="36dp"
                                android:textStyle="bold"
                                android:layout_marginTop="@dimen/dp_10"
                                />
                            <TextView
                                android:id="@+id/payResultDesc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="支付成功"
                                android:textColor="#ff999999"
                                android:textSize="12dp"
                                android:layout_marginTop="@dimen/dp_10"
                                android:layout_marginBottom="@dimen/dp_30"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="41dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingStart="@dimen/dp_20"
                            android:paddingEnd="@dimen/dp_20">
                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="支付方式"
                                android:textColor="#ff999999"
                                android:textSize="14dp"
                                />
                            <ImageView
                                android:id="@+id/payMethodIcon"
                                android:layout_width="@dimen/dp_16"
                                android:layout_height="@dimen/dp_16"
                                android:src="@mipmap/pay_alipay_ic"
                                />
                            <TextView
                                android:id="@+id/payMethodDesc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="支付宝"
                                android:textColor="#333333"
                                android:textSize="14dp"
                                android:layout_marginStart="4dp"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="41dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingStart="@dimen/dp_20"
                            android:paddingEnd="@dimen/dp_20">
                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="交易时间"
                                android:textColor="#ff999999"
                                android:textSize="14dp"
                                />
                            <TextView
                                android:id="@+id/payTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="xxxxxxxxxxxx"
                                android:textColor="#333333"
                                android:textSize="14dp"
                                android:layout_marginStart="4dp"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="41dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingStart="@dimen/dp_20"
                            android:paddingEnd="@dimen/dp_20">
                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="平台交易单号"
                                android:textColor="#ff999999"
                                android:textSize="14dp"
                                />
                            <TextView
                                android:id="@+id/payOrderNo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="xxxxxxxxxxxxx"
                                android:textColor="#333333"
                                android:textSize="14dp"
                                android:layout_marginStart="4dp"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/waterNoContainer"
                            android:layout_width="match_parent"
                            android:layout_height="41dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingStart="@dimen/dp_20"
                            android:paddingEnd="@dimen/dp_20">
                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="支付流水号"
                                android:textColor="#ff999999"
                                android:textSize="14dp"
                                />
                            <TextView
                                android:id="@+id/transNo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="xxxxxxxxxxxxxxxxxx"
                                android:textColor="#333333"
                                android:textSize="14dp"
                                android:layout_marginStart="4dp"
                                />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/orderInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_20"
                        android:orientation="vertical"
                        android:visibility="gone"
                        tools:visibility="visible">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">
                            <View
                                android:layout_width="4dp"
                                android:layout_height="@dimen/dp_16"
                                android:background="@drawable/bg_item_title_label"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="22dp"
                                android:text="订单详情"
                                android:gravity="center_vertical"
                                android:textColor="#ff333333"
                                android:textSize="16dp"
                                android:textStyle="bold"
                                android:layout_marginStart="6dp"/>
                            <View
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="1dp"/>
                        </LinearLayout>
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerView"
                            android:fadingEdge="none"
                            android:overScrollMode="never"
                            android:layout_marginTop="@dimen/dp_12"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="40dp"
                            android:clipToPadding="false"/>

                    </LinearLayout>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>

        </LinearLayout>
    </LinearLayout>
</FrameLayout>
