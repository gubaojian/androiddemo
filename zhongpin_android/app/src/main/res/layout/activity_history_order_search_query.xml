<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/toolbar"
            style="@style/AppTheme.Toolbar">
            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/back_black" />
            <TextView
                android:id="@+id/iv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查询订单"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#333333"/>
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <LinearLayout
                android:id="@+id/scrollBody"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginHorizontal="@dimen/dp_20"
                    android:text="请输入查询订单信息"
                    android:textColor="#ff333333"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/dp_20"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="@dimen/dp_20"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_search_input"
                    android:gravity="center_vertical">
                    <EditText
                        android:id="@+id/platCode"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:hint="输入材质代码"
                        android:singleLine="true"
                        android:textColor="#2f2f2f"
                        android:textColorHint="#999999"
                        android:textSize="14dp"
                        android:inputType="textCapCharacters|text"
                        android:layout_marginStart="@dimen/dp_8"
                        android:layout_marginEnd="@dimen/dp_8"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/layer_code_container"
                    android:layout_marginHorizontal="@dimen/dp_20"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_search_input"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/layer_code_text"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:hint="选择瓦型"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:textColor="#2f2f2f"
                        android:textColorHint="#999999"
                        android:textSize="14dp"
                        android:layout_marginStart="@dimen/dp_8"
                        android:layout_marginEnd="@dimen/dp_8"/>
                    <ImageView
                        android:layout_width="@dimen/dp_12"
                        android:layout_height="@dimen/dp_12"
                        android:src="@mipmap/input_gray_arrow"
                        android:layout_marginEnd="@dimen/dp_10"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/line_type_container"
                    android:layout_marginHorizontal="@dimen/dp_20"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_search_input"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/line_type_text"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:hint="选择线型"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:textColor="#2f2f2f"
                        android:textColorHint="#999999"
                        android:textSize="14dp"
                        android:layout_marginStart="@dimen/dp_8"
                        android:layout_marginEnd="@dimen/dp_8"/>
                    <ImageView
                        android:layout_width="@dimen/dp_12"
                        android:layout_height="@dimen/dp_12"
                        android:src="@mipmap/input_gray_arrow"
                        android:layout_marginEnd="@dimen/dp_10"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="@dimen/dp_20"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_search_input"
                    android:gravity="center_vertical">
                    <EditText
                        android:id="@+id/paper_size"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:hint="输入纸板规格，示例：200*200"
                        android:singleLine="true"
                        android:textColor="#2f2f2f"
                        android:textColorHint="#999999"
                        android:textSize="14dp"
                        android:layout_marginStart="@dimen/dp_8"
                        android:layout_marginEnd="@dimen/dp_8"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lineDescContainer"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="@dimen/dp_20"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_search_input"
                    android:gravity="center_vertical">
                    <EditText
                        android:id="@+id/lineDesc"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:hint="输入压线尺寸，示例：10+20+10"
                        android:singleLine="true"
                        android:textColor="#2f2f2f"
                        android:textColorHint="#999999"
                        android:textSize="14dp"
                        android:layout_marginStart="@dimen/dp_8"
                        android:layout_marginEnd="@dimen/dp_8"/>
                </LinearLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/dp_20">
                    <Button
                        android:id="@+id/submitButton"
                        android:layout_gravity="center"
                        android:layout_width="135dp"
                        android:layout_height="@dimen/dp_42"
                        android:background="@drawable/btn_blue_common_solid_selector"
                        android:padding="7dp"
                        android:text="查询"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="16dp" />
                </FrameLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="100dp"></View>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</FrameLayout>
