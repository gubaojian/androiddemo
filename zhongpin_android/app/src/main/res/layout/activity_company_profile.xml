<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">
    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/toolbar"
            style="@style/AppTheme.Toolbar"
            android:background="@color/transparent">
            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/back_black" />
            <TextView
                android:id="@+id/iv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="企业信息"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#333333"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/loadContainer"
            android:orientation="vertical">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#F9F9F9">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginTop="@dimen/dp_15">
                            <View
                                android:layout_width="4dp"
                                android:layout_height="@dimen/dp_16"
                                android:background="@drawable/bg_item_title_label"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="22dp"
                                android:text="企业基本信息"
                                android:gravity="center_vertical"
                                android:textColor="#ff333333"
                                android:textSize="16dp"
                                android:textStyle="bold"
                                android:layout_marginStart="6dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginHorizontal="@dimen/dp_10"
                            android:layout_marginTop="@dimen/dp_10"
                            android:background="@drawable/bg_item_form">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="41dp"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:paddingStart="@dimen/dp_20"
                                android:paddingEnd="@dimen/dp_20">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="企业名称"
                                    android:textColor="#999999"
                                    android:textSize="14dp"
                                    />
                                <TextView
                                    android:id="@+id/companyName"
                                    android:layout_height="wrap_content"
                                    android:text="xxxxxxxxxxx"
                                    android:textColor="#ff333333"
                                    android:textSize="12dp"
                                    android:maxLines="2"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:gravity="end"
                                    android:layout_marginStart="12dp"
                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="41dp"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:paddingStart="@dimen/dp_20"
                                android:paddingEnd="@dimen/dp_20">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="注册地址"
                                    android:textColor="#999999"
                                    android:textSize="14dp"
                                    />
                                <TextView
                                    android:id="@+id/registerAddress"
                                    android:layout_height="wrap_content"
                                    android:text="xxxxxxxxxxx"
                                    android:textColor="#ff333333"
                                    android:textSize="12dp"
                                    android:maxLines="2"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:gravity="end"
                                    android:layout_marginStart="12dp"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="41dp"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:paddingStart="@dimen/dp_20"
                                android:paddingEnd="@dimen/dp_20">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="法定代表人"
                                    android:textColor="#999999"
                                    android:textSize="14dp"
                                    />
                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"/>
                                <TextView
                                    android:id="@+id/companyFaRen"
                                    android:layout_width="wrap_content"
                                    android:layout_height="20dp"
                                    android:text="xxxxxxxxxxx"
                                    android:textColor="#ff333333"
                                    android:textSize="14dp"
                                    />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginTop="@dimen/dp_15">
                            <View
                                android:layout_width="4dp"
                                android:layout_height="@dimen/dp_16"
                                android:background="@drawable/bg_item_title_label"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="22dp"
                                android:text="企业联系人"
                                android:gravity="center_vertical"
                                android:textColor="#ff333333"
                                android:textSize="16dp"
                                android:textStyle="bold"
                                android:layout_marginStart="6dp"/>
                            <View
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="1dp"/>
                            <LinearLayout
                                android:id="@+id/editCompanyContract"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="编辑"
                                    android:textColor="#ff557ef7"
                                    android:textSize="14dp"
                                    android:textStyle="bold"
                                    />
                                <ImageView
                                    android:layout_width="@dimen/dp_12"
                                    android:layout_height="@dimen/dp_12"
                                    android:src="@mipmap/order_detail_right_arrow"
                                    android:layout_marginStart="4dp"
                                    android:layout_marginEnd="10dp"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginHorizontal="@dimen/dp_10"
                            android:layout_marginTop="@dimen/dp_10"
                            android:background="@drawable/bg_item_form">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="41dp"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:paddingStart="@dimen/dp_20"
                                android:paddingEnd="@dimen/dp_20">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="姓名"
                                    android:textColor="#999999"
                                    android:textSize="14dp"
                                    />
                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"/>
                                <TextView
                                    android:id="@+id/companyContractName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="20dp"
                                    android:text="xxxxxxxxxxx"
                                    android:textColor="#ff333333"
                                    android:textSize="14dp"
                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="41dp"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:paddingStart="@dimen/dp_20"
                                android:paddingEnd="@dimen/dp_20">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="联系电话"
                                    android:textColor="#999999"
                                    android:textSize="14dp"
                                    />
                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"/>
                                <TextView
                                    android:id="@+id/companyContractPhone"
                                    android:layout_width="wrap_content"
                                    android:layout_height="20dp"
                                    android:text="xxxxxxxxxxx"
                                    android:textColor="#ff333333"
                                    android:textSize="14dp"
                                    />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginTop="@dimen/dp_15">
                            <View
                                android:layout_width="4dp"
                                android:layout_height="@dimen/dp_16"
                                android:background="@drawable/bg_item_title_label"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="22dp"
                                android:text="平台联系人"
                                android:gravity="center_vertical"
                                android:textColor="#ff333333"
                                android:textSize="16dp"
                                android:textStyle="bold"
                                android:layout_marginStart="6dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginHorizontal="@dimen/dp_10"
                            android:layout_marginTop="@dimen/dp_10"
                            android:background="@drawable/bg_item_form">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="41dp"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:paddingStart="@dimen/dp_20"
                                android:paddingEnd="@dimen/dp_20">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="区域经理"
                                    android:textColor="#999999"
                                    android:textSize="14dp"
                                    />
                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"/>
                                <TextView
                                    android:id="@+id/areaManagerName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="20dp"
                                    android:text="xxxxxxxxxxx"
                                    android:textColor="#ff333333"
                                    android:textSize="14dp"
                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="41dp"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:paddingStart="@dimen/dp_20"
                                android:paddingEnd="@dimen/dp_20">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="联系电话"
                                    android:textColor="#999999"
                                    android:textSize="14dp"
                                    />
                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"/>
                                <TextView
                                    android:id="@+id/areaManagerPhone"
                                    android:layout_width="wrap_content"
                                    android:layout_height="20dp"
                                    android:text="xxxxxxxxxxx"
                                    android:textColor="#ff333333"
                                    android:textSize="14dp"
                                    />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>

        </LinearLayout>
    </LinearLayout>
</FrameLayout>
