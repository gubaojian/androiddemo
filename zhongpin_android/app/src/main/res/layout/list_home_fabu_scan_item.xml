<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:paddingEnd="@dimen/dp_20"
    android:paddingStart="@dimen/dp_20"
    android:paddingTop="@dimen/dp_10">
  <com.zhongpin.mvvm_android.view.AspectRatioLayout
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="160"
      app:arl_heightRatio="185"
      app:arl_widthRatio="160"
      android:layout_marginEnd="@dimen/dp_15">
      <ImageView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:src="@mipmap/ic_box"/>
  </com.zhongpin.mvvm_android.view.AspectRatioLayout>
  <LinearLayout
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="160"
      android:orientation="vertical">
    <LinearLayout
        android:id="@+id/fabu"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/bg_home_fabu_item"
        android:gravity="center">
      <ImageView
          android:layout_width="@dimen/dp_50"
          android:layout_height="@dimen/dp_50"
          android:src="@mipmap/ic_fabu"/>
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:layout_marginStart="@dimen/dp_15">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发布"
            android:textColor="#ff333333"
            android:textSize="16dp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="纸板采购"
            android:textColor="#ff333333"
            android:textSize="16dp"
            />
      </LinearLayout>
    </LinearLayout>
   <LinearLayout
          android:id="@+id/scan"
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="1"
          android:background="@drawable/bg_home_scan_item"
          android:gravity="center"
          android:layout_marginTop="@dimen/dp_20">
        <ImageView
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:src="@mipmap/ic_scan"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/dp_15">
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="扫码"
              android:textColor="#ff333333"
              android:textSize="16dp"
              android:textStyle="bold"
              />
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="确认收货"
              android:textColor="#ff333333"
              android:textSize="16dp"
              />
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="品质申诉"
              android:textColor="#ff333333"
              android:textSize="16dp"
              />
        </LinearLayout>

    </LinearLayout>


  </LinearLayout>


</LinearLayout>