<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.zhongpin.mvvm_android.ui.login.RegisterActivity">
        <LinearLayout
            android:id="@+id/toolbar"
            style="@style/AppTheme.Toolbar"
            android:background="@color/transparent">
            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/back_black" />
            <TextView
                android:id="@+id/iv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提交企业信息"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#333333"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        </LinearLayout>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#F9F9F9">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
               >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_height="@dimen/dp_24"
                        android:orientation="horizontal"
                        android:layout_marginHorizontal="@dimen/dp_60"
                        android:gravity="center_vertical">
                        <FrameLayout
                            android:layout_width="@dimen/dp_24"
                            android:layout_height="@dimen/dp_24">
                            <TextView
                                android:layout_width="@dimen/dp_16"
                                android:layout_height="@dimen/dp_16"
                                android:layout_gravity="center"
                                android:background="@drawable/bg_progress_done_dot"
                                android:text="1"
                                android:gravity="center"
                                android:textColor="#ffffffff"
                                android:textSize="12dp"
                                android:textStyle="bold"/>
                        </FrameLayout>
                        <View
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="1dp"
                            android:background="#557EF7"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="4dp"/>
                        <FrameLayout
                            android:layout_width="@dimen/dp_24"
                            android:layout_height="@dimen/dp_24">
                            <TextView
                                android:layout_width="@dimen/dp_16"
                                android:layout_height="@dimen/dp_16"
                                android:layout_gravity="center"
                                android:background="@drawable/bg_progress_done_dot"
                                android:text="2"
                                android:gravity="center"
                                android:textColor="#ffffffff"
                                android:textSize="12dp"
                                android:textStyle="bold"/>
                        </FrameLayout>

                        <View
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="1dp"
                            android:background="#557EF7"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="4dp"/>
                        <FrameLayout
                            android:layout_width="@dimen/dp_24"
                            android:layout_height="@dimen/dp_24"
                            android:background="@mipmap/submit_company_progress_current">
                            <TextView
                                android:layout_width="@dimen/dp_16"
                                android:layout_height="@dimen/dp_16"
                                android:layout_gravity="center"
                                android:background="@drawable/bg_progress_done_dot"
                                android:text="3"
                                android:gravity="center"
                                android:textColor="#ffffffff"
                                android:textSize="12dp"
                                android:textStyle="bold"/>
                        </FrameLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/dp_4"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginHorizontal="@dimen/dp_36"
                        android:gravity="center_vertical">
                        <TextView
                            android:layout_width="72dp"
                            android:layout_height="17dp"
                            android:text="提交企业信息"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textColor="#ff333333"
                            android:textSize="12dp"
                            />
                        <View
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="1dp"/>
                        <TextView
                            android:layout_width="72dp"
                            android:layout_height="17dp"
                            android:text="签订服务合同"
                            android:textColor="#ff333333"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="12dp"
                            />
                        <View
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="1dp"/>
                        <TextView
                            android:layout_width="72dp"
                            android:layout_height="17dp"
                            android:text="平台审核"
                            android:gravity="center"
                            android:textColor="#ff333333"
                            android:textStyle="bold"
                            android:textSize="12dp"
                            />
                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#F3F3F3"
                        android:layout_marginTop="@dimen/dp_20"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="@dimen/dp_20">
                        <View
                            android:layout_width="4dp"
                            android:layout_height="@dimen/dp_16"
                            android:background="@drawable/bg_item_title_label"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="22dp"
                            android:text="审核结果"
                            android:gravity="center_vertical"
                            android:textColor="#ff333333"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:layout_marginStart="6dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginHorizontal="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_10"
                        android:background="@drawable/bg_item_form"
                        android:gravity="center_horizontal"
                        android:id="@+id/sign_pending_container">
                        <ImageView
                            android:layout_marginTop="@dimen/dp_30"
                            android:layout_width="165dp"
                            android:layout_height="165dp"
                            android:src="@mipmap/sign_approve_pending"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="待平台审核"
                            android:textColor="#ff333333"
                            android:textSize="14dp"
                            android:textStyle="bold"
                            android:layout_marginTop="@dimen/dp_10"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_20"
                            android:layout_marginEnd="@dimen/dp_20"
                            android:layout_marginTop="@dimen/dp_10"
                            android:gravity="center"
                            android:text="预计1-3个工作日内完成审核，审核结果将以短信形式发送至联系人电话，请注意查收。"
                            android:textColor="#ff333333"
                            android:textSize="12dp"
                            />
                        <TextView
                            android:id="@+id/contractTip"
                            android:layout_width="wrap_content"
                            android:layout_height="17dp"
                            android:text="如有疑问，可联系客服。"
                            android:textColor="#ff333333"
                            android:textSize="12dp"
                            android:layout_marginStart="@dimen/dp_20"
                            android:layout_marginEnd="@dimen/dp_20"
                            android:maxLines="2"
                            android:layout_marginBottom="@dimen/dp_30"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginHorizontal="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_10"
                        android:background="@drawable/bg_item_form"
                        android:gravity="center_horizontal"
                        android:id="@+id/sign_failed_container">
                        <ImageView
                            android:layout_marginTop="@dimen/dp_30"
                            android:layout_width="165dp"
                            android:layout_height="165dp"
                            android:src="@mipmap/sign_approve_failed"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="平台审核未通过"
                            android:textColor="#ff333333"
                            android:textSize="14dp"
                            android:textStyle="bold"
                            android:layout_marginTop="@dimen/dp_10"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_reject_reason_item"
                            android:layout_marginHorizontal="48dp"
                            android:layout_marginVertical="@dimen/dp_8"
                            android:paddingVertical="@dimen/dp_12"
                            android:paddingHorizontal="12dp">
                            <TextView
                                android:id="@+id/message"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp_20"
                                android:layout_marginEnd="@dimen/dp_20"
                                android:gravity="center"
                                android:textColor="#ff333333"
                                android:textSize="12dp"
                                />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_20"
                            android:layout_marginEnd="@dimen/dp_20"

                            android:gravity="center"
                            android:text="您提交的信息不符合要求。"
                            android:textColor="#ff333333"
                            android:textSize="12dp"
                            />

                        <TextView
                            android:id="@+id/failedContractTip"
                            android:layout_width="wrap_content"
                            android:layout_height="17dp"
                            android:text="如有疑问，可联系客服。"
                            android:textColor="#ff333333"
                            android:textSize="12dp"
                            android:layout_marginStart="@dimen/dp_20"
                            android:layout_marginEnd="@dimen/dp_20"
                            android:maxLines="2"
                            android:layout_marginBottom="@dimen/dp_36"
                            />
                        <Button
                            android:id="@+id/applyAgain"
                            android:layout_width="135dp"
                            android:layout_height="@dimen/dp_42"
                            android:background="@drawable/btn_blue_common_solid_selector"
                            android:padding="7dp"
                            android:paddingTop="7dp"
                            android:text="重新申请"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:textSize="16dp"
                            android:layout_marginBottom="@dimen/dp_30"/>
                    </LinearLayout>
              </LinearLayout>


            </LinearLayout>
    </androidx.core.widget.NestedScrollView>


    </LinearLayout>
</FrameLayout>
