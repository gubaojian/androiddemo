<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="horizontal"
     android:layout_marginHorizontal="@dimen/dp_10"
     android:background="@drawable/bg_home_entry_item"
     android:paddingHorizontal="@dimen/dp_8">
     <LinearLayout
         android:id="@+id/home_entry_mine_price"
         android:layout_width="0dp"
         android:layout_weight="1"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         android:paddingVertical="@dimen/dp_15"
         android:gravity="center">
         <ImageView
             android:layout_width="@dimen/dp_60"
             android:layout_height="@dimen/dp_60"
             android:src="@mipmap/home_entry_mine_price"/>
         <TextView
             android:layout_marginTop="@dimen/dp_4"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="专属报价"
             android:textColor="#ff333333"
             android:textSize="14dp"
             android:textStyle="bold"/>
     </LinearLayout>
     <LinearLayout
         android:id="@+id/home_entry_material_price"
         android:layout_width="0dp"
         android:layout_weight="1"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         android:paddingVertical="@dimen/dp_15"
         android:gravity="center">
         <ImageView
             android:layout_width="@dimen/dp_60"
             android:layout_height="@dimen/dp_60"
             android:src="@mipmap/home_entry_material_price"/>
         <TextView
             android:layout_marginTop="@dimen/dp_4"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="材质报价"
             android:textColor="#ff333333"
             android:textSize="14dp"
             android:textStyle="bold"/>
     </LinearLayout>
     <LinearLayout
         android:id="@+id/home_entry_my_order"
         android:layout_width="0dp"
         android:layout_weight="1"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         android:paddingVertical="@dimen/dp_15"
         android:gravity="center">
         <ImageView
             android:layout_width="@dimen/dp_60"
             android:layout_height="@dimen/dp_60"
             android:src="@mipmap/home_entry_my_order"/>
         <TextView
             android:layout_marginTop="@dimen/dp_4"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="我的订单"
             android:textColor="#ff333333"
             android:textSize="14dp"
             android:textStyle="bold"/>
     </LinearLayout>
     <LinearLayout
         android:id="@+id/home_entry_my_pay_account"
         android:layout_width="0dp"
         android:layout_weight="1"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         android:paddingVertical="@dimen/dp_15"
         android:gravity="center">
         <ImageView
             android:layout_width="@dimen/dp_60"
             android:layout_height="@dimen/dp_60"
             android:src="@mipmap/home_entry_my_pay_account"/>
         <TextView
             android:layout_marginTop="@dimen/dp_4"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="企业余额"
             android:textColor="#ff333333"
             android:textSize="14dp"
             android:textStyle="bold"/>
     </LinearLayout>

 </LinearLayout>

</FrameLayout>