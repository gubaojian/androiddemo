<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9"
    android:clickable="true">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@mipmap/mine_top_bg"
        android:scaleType="centerCrop"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/content">
        <com.scwang.smart.refresh.layout.SmartRefreshLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/refresh_layout">
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/dp_40"
                    android:id="@+id/container">

                    <LinearLayout
                        android:id="@+id/userInfoContainer"
                        android:layout_width="match_parent"
                        android:layout_height="68dp"
                        android:layout_marginTop="@dimen/dp_40"
                        android:layout_marginEnd="@dimen/dp_20"
                        android:layout_marginStart="@dimen/dp_20">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/mine_avatar"
                            android:layout_width="68dp"
                            android:layout_height="68dp"
                            android:src="@mipmap/ic_user_default"
                            app:civ_border_width="2dp"
                            app:civ_border_color="@color/white"
                            android:layout_marginStart="@dimen/dp_8"/>
                         <LinearLayout
                             android:layout_width="0dp"
                             android:layout_height="match_parent"
                             android:layout_weight="1"
                             android:gravity="center_vertical"
                             android:layout_marginStart="@dimen/dp_20"
                             android:orientation="vertical">
                             <TextView
                                 android:id="@+id/userNick"
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:text="用户昵称"
                                 android:textColor="#ff333333"
                                 android:textSize="18dp"
                                 android:textStyle="bold"
                                 android:maxLines="1"
                                 android:layout_marginBottom="@dimen/dp_4"/>
                             <TextView
                                 android:id="@+id/userPhone"
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:text="手机号：xxxxxxxxxxx"
                                 android:textColor="#ff333333"
                                 android:textSize="14dp"
                                 />
                         </LinearLayout>
                         <FrameLayout
                             android:id="@+id/editUserInfo"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:paddingStart="4dp"
                             android:paddingEnd="4dp">
                             <ImageView
                                 android:layout_width="18dp"
                                 android:layout_height="@dimen/dp_18"
                                 android:src="@mipmap/mine_edit_user_info_ic"/>
                         </FrameLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginTop="@dimen/dp_16">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center">
                            <TextView
                                android:id="@+id/orderNum"
                                android:layout_marginTop="@dimen/dp_10"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="**"
                                android:textColor="#ff333333"
                                android:textSize="18dp"
                                android:textStyle="bold"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="订单数"
                                android:textColor="#666666"
                                android:textSize="12dp"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/totalAreaAmount"
                                android:layout_marginTop="@dimen/dp_10"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="**"
                                android:textColor="#ff333333"
                                android:textSize="18dp"
                                android:textStyle="bold"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="订购总面积"
                                android:textColor="#666666"
                                android:textSize="12dp"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/buyCount"
                                android:layout_marginTop="@dimen/dp_10"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="**"
                                android:textColor="#ff333333"
                                android:textSize="18dp"
                                android:textStyle="bold"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="订购次数"
                                android:textColor="#666666"
                                android:textSize="12dp"
                                />
                        </LinearLayout>
                    </LinearLayout>

                    <com.zhongpin.mvvm_android.view.AspectRatioLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_10"
                        app:arl_widthRatio="335"
                        app:arl_heightRatio="75"
                        android:id="@+id/payAccountDetail">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@mipmap/account_amount_bg"
                            android:scaleType="fitXY"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical">
                                    <ImageView
                                        android:layout_width="@dimen/dp_16"
                                        android:layout_height="@dimen/dp_16"
                                        android:src="@mipmap/mine_waller_ic"
                                        android:layout_marginStart="@dimen/dp_15"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="账户余额"
                                        android:textColor="#ffffffff"
                                        android:textSize="14dp"
                                        android:textStyle="bold"
                                        android:layout_marginStart="@dimen/dp_4"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="结算方式：预付款"
                                        android:textColor="#ffffffff"
                                        android:textSize="12dp"
                                        android:layout_marginStart="@dimen/dp_8"
                                        />
                                </LinearLayout>
                                <TextView
                                    android:layout_marginStart="36dp"
                                    android:id="@+id/remainAmount"
                                    android:layout_marginTop="8dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0.00"
                                    android:textColor="#ffffffff"
                                    android:textSize="20dp"
                                    android:textStyle="bold"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="查看"
                                    android:textColor="#ffffffff"
                                    android:textSize="14dp"
                                    android:textStyle="bold"
                                    />
                                <ImageView
                                    android:layout_width="@dimen/dp_14"
                                    android:layout_height="@dimen/dp_14"
                                    android:src="@mipmap/see_money_amount_arrow"
                                    android:layout_marginStart="@dimen/dp_4"
                                    android:layout_marginEnd="20dp"/>
                            </LinearLayout>
                        </LinearLayout>
                    </com.zhongpin.mvvm_android.view.AspectRatioLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="@dimen/dp_10">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="我的企业"
                            android:textColor="#ff333333"
                            android:textSize="14dp"
                            android:textStyle="bold"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@drawable/bg_mine_form"
                            android:layout_marginTop="@dimen/dp_10">
                            <LinearLayout
                                android:id="@+id/companyItemContainer"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">
                                <ImageView
                                    android:layout_width="@dimen/dp_16"
                                    android:layout_height="@dimen/dp_16"
                                    android:src="@mipmap/my_company_ic"
                                    android:layout_marginStart="@dimen/dp_20"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="我的企业"
                                    android:textColor="#ff333333"
                                    android:textSize="14dp"
                                    android:textStyle="bold"
                                    android:layout_marginStart="@dimen/dp_8"/>
                                <TextView
                                    android:id="@+id/companyName"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:text="xx科技有限公司"
                                    android:textColor="#ff333333"
                                    android:textSize="12dp"
                                    android:maxLines="2"
                                    android:gravity="end|center_vertical"
                                    android:layout_marginEnd="20dp"
                                    android:layout_marginStart="12dp"
                                    tools:visibility="gone"/>
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/mineCompanyVerifyNow"
                                    android:visibility="gone"
                                    android:gravity="center_vertical|end"
                                    tools:visibility="visible">
                                    <TextView
                                        android:id="@+id/mineCompanyVerifyStatus"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="立即认证"
                                        android:textColor="#557EF7"
                                        android:textSize="14dp"
                                        android:textStyle="bold"/>
                                    <ImageView
                                        android:layout_width="@dimen/dp_18"
                                        android:layout_height="@dimen/dp_18"
                                        android:src="@mipmap/mine_see_arrow"
                                        android:layout_marginStart="@dimen/dp_4"
                                        android:layout_marginEnd="20dp"/>
                                </LinearLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">
                                <ImageView
                                    android:layout_width="@dimen/dp_16"
                                    android:layout_height="@dimen/dp_16"
                                    android:src="@mipmap/my_permission_ic"
                                    android:layout_marginStart="@dimen/dp_20"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="角色权限"
                                    android:textColor="#ff333333"
                                    android:textSize="14dp"
                                    android:textStyle="bold"
                                    android:layout_marginStart="@dimen/dp_8"/>
                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"/>
                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="200dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginEnd="15dp">
                                    <com.zhongpin.mvvm_android.view.HorizontalPermissionListView
                                        android:id="@+id/permissionList"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        android:scrollbars="none"/>

                                </androidx.constraintlayout.widget.ConstraintLayout>


                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="@dimen/dp_10">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="企业管理"
                            android:textColor="#ff333333"
                            android:textSize="14dp"
                            android:textStyle="bold"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@drawable/bg_mine_form"
                            android:layout_marginTop="@dimen/dp_10">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="@dimen/dp_15"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">
                                <LinearLayout
                                    android:id="@+id/companyInfo"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_marginStart="@dimen/dp_20"
                                    android:gravity="center">
                                    <ImageView
                                        android:layout_width="@dimen/dp_40"
                                        android:layout_height="@dimen/dp_40"
                                        android:src="@mipmap/mine_company_info"/>
                                    <TextView
                                        android:layout_marginTop="@dimen/dp_8"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="企业信息"
                                        android:textColor="#ff333333"
                                        android:textSize="14dp"
                                        android:textStyle="bold"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:id="@+id/memberInfo"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_marginStart="@dimen/dp_20"
                                    android:gravity="center">
                                    <ImageView
                                        android:layout_width="@dimen/dp_40"
                                        android:layout_height="@dimen/dp_40"
                                        android:src="@mipmap/mine_company_member"/>
                                    <TextView
                                        android:layout_marginTop="@dimen/dp_8"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="成员管理"
                                        android:textColor="#ff333333"
                                        android:textSize="14dp"
                                        android:textStyle="bold"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:id="@+id/addressInfo"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_marginStart="@dimen/dp_20"
                                    android:gravity="center">
                                    <ImageView
                                        android:layout_width="@dimen/dp_40"
                                        android:layout_height="@dimen/dp_40"
                                        android:src="@mipmap/mine_address"/>
                                    <TextView
                                        android:layout_marginTop="@dimen/dp_8"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="收货地址"
                                        android:textColor="#ff333333"
                                        android:textSize="14dp"
                                        android:textStyle="bold"/>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="@dimen/dp_10">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="设置"
                            android:textColor="#ff333333"
                            android:textSize="14dp"
                            android:textStyle="bold"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@drawable/bg_mine_form"
                            android:layout_marginTop="@dimen/dp_10">
                            <LinearLayout
                                android:id="@+id/mineSettingItem"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:visibility="gone">
                                <ImageView
                                    android:layout_width="@dimen/dp_16"
                                    android:layout_height="@dimen/dp_16"
                                    android:src="@mipmap/mine_setting_ic"
                                    android:layout_marginStart="@dimen/dp_20"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="系统权限"
                                    android:textColor="#ff333333"
                                    android:textSize="14dp"
                                    android:textStyle="bold"
                                    android:layout_marginStart="@dimen/dp_8"/>
                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"/>
                                <ImageView
                                    android:layout_width="@dimen/dp_18"
                                    android:layout_height="@dimen/dp_18"
                                    android:src="@mipmap/mine_see_arrow"
                                    android:layout_marginStart="@dimen/dp_4"
                                    android:layout_marginEnd="20dp"/>
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/mineAboutItem"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">
                                <ImageView
                                    android:layout_width="@dimen/dp_16"
                                    android:layout_height="@dimen/dp_16"
                                    android:src="@mipmap/mine_about_ic"
                                    android:layout_marginStart="@dimen/dp_20"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="关于我们"
                                    android:textColor="#ff333333"
                                    android:textSize="14dp"
                                    android:textStyle="bold"
                                    android:layout_marginStart="@dimen/dp_8"/>
                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"/>
                                <ImageView
                                    android:layout_width="@dimen/dp_18"
                                    android:layout_height="@dimen/dp_18"
                                    android:src="@mipmap/mine_see_arrow"
                                    android:layout_marginStart="@dimen/dp_4"
                                    android:layout_marginEnd="20dp"/>
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </com.scwang.smart.refresh.layout.SmartRefreshLayout>

    </FrameLayout>

</FrameLayout>