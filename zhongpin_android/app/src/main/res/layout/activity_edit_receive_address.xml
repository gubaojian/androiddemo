<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.zhongpin.mvvm_android.ui.login.RegisterActivity">
        <LinearLayout
            android:id="@+id/toolbar"
            style="@style/AppTheme.Toolbar"
            android:background="@color/transparent">
            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/back_black" />
            <TextView
                android:id="@+id/iv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="编辑收货地址"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#333333"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#F9F9F9">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/white">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/choose_shouhuo_area_container">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/dp_12"
                        android:layout_marginHorizontal="@dimen/dp_20"
                        android:gravity="center_vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#333333"
                            android:textStyle="bold"
                            android:textSize="14dp"
                            android:text="收货地区"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/dp_12"
                        android:paddingBottom="10dp"
                        android:layout_marginHorizontal="@dimen/dp_20"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/choose_shouhuo_area_text"
                            android:layout_width="wrap_content"
                            android:layout_height="22dp"
                            android:text="请选择省市区"
                            android:singleLine="true"
                            android:textColor="#2f2f2f"
                            android:textColorHint="#999999"
                            android:textSize="14dp"/>
                        <View
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"/>
                        <ImageView
                            android:layout_width="@dimen/dp_16"
                            android:layout_height="@dimen/dp_16"
                            android:src="@mipmap/choose_arrow_right"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#F9F9F9"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/dp_12"
                        android:layout_marginHorizontal="@dimen/dp_20"
                        android:gravity="center_vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#333333"
                            android:textStyle="bold"
                            android:textSize="14dp"
                            android:text="详细地址"/>
                    </LinearLayout>
                    <EditText
                        android:layout_marginTop="@dimen/dp_12"
                        android:id="@+id/editShouHuoDetail"
                        android:layout_width="match_parent"
                        android:layout_height="22dp"
                        android:layout_marginHorizontal="@dimen/dp_20"
                        android:background="@null"
                        android:hint="请输入"
                        android:singleLine="true"
                        android:textColor="#2f2f2f"
                        android:textColorHint="#999999"
                        android:textSize="14dp"
                        android:inputType="text"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="10dp"
                        android:background="#F9F9F9"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/dp_12"
                        android:layout_marginHorizontal="@dimen/dp_20"
                        android:gravity="center_vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#333333"
                            android:textStyle="bold"
                            android:textSize="14dp"
                            android:text="收货地址简称"/>
                    </LinearLayout>
                    <EditText
                        android:layout_marginTop="@dimen/dp_12"
                        android:id="@+id/editShouHuoShort"
                        android:layout_width="match_parent"
                        android:layout_height="22dp"
                        android:layout_marginHorizontal="@dimen/dp_20"
                        android:background="@null"
                        android:hint="请输入"
                        android:singleLine="true"
                        android:textColor="#2f2f2f"
                        android:textColorHint="#999999"
                        android:textSize="14dp"
                        android:inputType="text"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="10dp"
                        android:background="#F9F9F9"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/choose_jingweidu_container">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/dp_12"
                        android:layout_marginHorizontal="@dimen/dp_20"
                        android:gravity="center_vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#333333"
                            android:textStyle="bold"
                            android:textSize="14dp"
                            android:text="经度/纬度"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/dp_12"
                        android:paddingBottom="10dp"
                        android:layout_marginHorizontal="@dimen/dp_20"
                        android:orientation="horizontal">
                        <EditText
                            android:id="@+id/choose_jingweidu_edit_text"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="22dp"
                            android:background="@null"
                            android:hint="请输入"
                            android:singleLine="true"
                            android:textColor="#2f2f2f"
                            android:textColorHint="#999999"
                            android:textSize="14dp"
                            android:inputType="text"/>
                        <TextView
                            android:id="@+id/auto_choose_jingweidu"
                            android:layout_width="wrap_content"
                            android:layout_height="22dp"
                            android:text="自动获取"
                            android:singleLine="true"
                            android:textColor="#57C248"
                            android:textStyle="bold"
                            android:textSize="14dp"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#F9F9F9"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/dp_12"
                        android:layout_marginHorizontal="@dimen/dp_20"
                        android:gravity="center_vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#333333"
                            android:textStyle="bold"
                            android:textSize="14dp"
                            android:text="收货人姓名"/>
                    </LinearLayout>
                    <EditText
                        android:layout_marginTop="@dimen/dp_12"
                        android:id="@+id/editShouHuoName"
                        android:layout_width="match_parent"
                        android:layout_height="22dp"
                        android:layout_marginHorizontal="@dimen/dp_20"
                        android:background="@null"
                        android:hint="请输入"
                        android:singleLine="true"
                        android:textColor="#2f2f2f"
                        android:textColorHint="#999999"
                        android:textSize="14dp"
                        android:inputType="text"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="10dp"
                        android:background="#F9F9F9"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/dp_12"
                        android:layout_marginHorizontal="@dimen/dp_20"
                        android:gravity="center_vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#333333"
                            android:textStyle="bold"
                            android:textSize="14dp"
                            android:text="收货人手机号"/>
                    </LinearLayout>
                    <EditText
                        android:layout_marginTop="@dimen/dp_12"
                        android:id="@+id/editShouHuoShouJi"
                        android:layout_width="match_parent"
                        android:layout_height="22dp"
                        android:layout_marginHorizontal="@dimen/dp_20"
                        android:background="@null"
                        android:hint="请输入"
                        android:singleLine="true"
                        android:textColor="#2f2f2f"
                        android:textColorHint="#999999"
                        android:textSize="14dp"
                        android:inputType="phone"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="10dp"
                        android:background="#F9F9F9"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:background="#F9F9F9"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:background="#F9F9F9">
                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                    <Button
                        android:id="@+id/btnSubmit"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="@dimen/dp_46"
                        android:background="@drawable/btn_common_solid_selector"
                        android:padding="7dp"
                        android:paddingTop="7dp"
                        android:gravity="center"
                        android:text="保存"
                        android:textColor="@android:color/white"
                        android:textSize="16dp" />
                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                </LinearLayout>


            </LinearLayout>
        </ScrollView>


    </LinearLayout>
</FrameLayout>
