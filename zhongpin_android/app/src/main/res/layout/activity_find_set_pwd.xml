<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/top_bg"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"/>
    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.zhongpin.mvvm_android.ui.login.RegisterActivity">
        <LinearLayout
            android:id="@+id/toolbar"
            style="@style/AppTheme.Toolbar"
            android:background="@color/transparent">
            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/back_black" />
            <TextView
                android:id="@+id/iv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="找回密码"
                android:textSize="24dp"
                android:textStyle="bold"
                android:textColor="#333333"/>
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp_26"
                    android:layout_marginTop="32dp"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:layout_marginEnd="6dp"
                        android:src="@mipmap/ic_launcher"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="新密码"
                        android:singleLine="true"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:textSize="14dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginHorizontal="@dimen/dp_26"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/edit_input_rect_circle_bg"
                    android:gravity="center_vertical">
                    <EditText
                        android:id="@+id/editUsername"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:hint="请输新密码"
                        android:singleLine="true"
                        android:textColor="#2f2f2f"
                        android:textColorHint="#999999"
                        android:inputType="textPassword"
                        android:textSize="14dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp_26"
                    android:layout_marginTop="32dp"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:layout_marginEnd="6dp"
                        android:src="@mipmap/ic_launcher"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="再次确认"
                        android:singleLine="true"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:textSize="14dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginHorizontal="@dimen/dp_26"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/edit_input_rect_circle_bg"
                    android:gravity="center_vertical">
                    <EditText
                        android:id="@+id/confirm_pwd"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:hint="请再次输入新密码"
                        android:singleLine="true"
                        android:textColor="#2f2f2f"
                        android:textColorHint="#999999"
                        android:textSize="14dp"
                        android:inputType="textPassword"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"/>
                </LinearLayout>
                <Button
                    android:id="@+id/btnLogin"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_46"
                    android:background="@drawable/btn_common_solid_selector"
                    android:padding="7dp"
                    android:paddingTop="7dp"
                    android:layout_marginTop="64dp"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:text="完成，去登录"
                    android:textColor="@android:color/white"
                    android:textSize="15dp" />

            </LinearLayout>
        </ScrollView>


    </LinearLayout>
</FrameLayout>
