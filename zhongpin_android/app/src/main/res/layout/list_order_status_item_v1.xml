<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:layout_marginHorizontal="@dimen/dp_10"
      android:background="@drawable/bg_order_item"
      android:paddingBottom="@dimen/dp_10"
      android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_5"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10">
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:layout_marginStart="@dimen/dp_15">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
          <TextView
              android:id="@+id/materialCode"
              android:layout_width="wrap_content"
              android:layout_height="25dp"
              android:text="B323B"
              android:textColor="#ff333333"
              android:textSize="18dp"
              android:textStyle="bold"
              />
          <androidx.appcompat.widget.AppCompatTextView
              android:id="@+id/waCode"
              android:layout_marginStart="4dp"
              android:background="@drawable/bg_flute_item"
              android:layout_width="wrap_content"
              android:layout_height="18dp"
              android:text="BC瓦"
              android:textColor="#ffffffff"
              android:textSize="11dp"
              android:textStyle="bold"
              android:gravity="center"
              android:paddingStart="@dimen/dp_6"
              android:paddingEnd="@dimen/dp_6"
              android:lineSpacingMultiplier="1.1"
              />

          <TextView
              android:id="@+id/statusText"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="8dp"
              android:text="待收货"
              android:textColor="#ffffa826"
              android:textSize="12dp" />
        </LinearLayout>
        <TextView
            android:id="@+id/buyDate"
            android:layout_marginTop="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2025-10-09 19:23"
            android:textColor="#ff999999"
            android:textSize="11dp"
            />
      </LinearLayout>
      <View
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"/>
      <TextView
          android:id="@+id/totalPrice"
          android:layout_width="wrap_content"
          android:layout_height="22dp"
          android:text="300"
          android:textColor="#ff333333"
          android:textSize="16dp"
          android:textStyle="bold"
          />
      <ImageView
          android:layout_width="@dimen/dp_12"
          android:layout_height="@dimen/dp_12"
          android:layout_marginStart="@dimen/dp_2"
          android:src="@mipmap/order_detail_gray_arrow"
          android:layout_marginEnd="15dp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F3F3F3"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center_vertical"
        android:layout_marginHorizontal="@dimen/dp_15">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="规格(mm)："
          android:textColor="#ff999999"
          android:textSize="12dp"/>
      <TextView
          android:id="@+id/paperSize"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="250 x 375"
          android:textColor="#ff333333"
          android:textSize="12dp"
          android:textStyle="bold"
          />
      <View
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"/>
      <TextView
          android:id="@+id/purchaseAmount"
          android:layout_width="wrap_content"
          android:layout_height="22dp"
          android:text="300"
          android:textColor="#ff333333"
          android:textSize="16dp"
          android:textStyle="bold"
          />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="张"
          android:textColor="#ff999999"
          android:textSize="12dp"
          />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center_vertical"
        android:layout_marginHorizontal="@dimen/dp_15">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="压线(mm)："
          android:textColor="#ff999999"
          android:textSize="12dp"/>
      <TextView
          android:id="@+id/lineDesc"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="123*45*123/明线"
          android:textColor="#ff333333"
          android:textSize="12dp"
          android:textStyle="bold"
          />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center_vertical"
        android:layout_marginHorizontal="@dimen/dp_10">
      <View
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"/>
      <TextView
          android:id="@+id/feedback"
          android:gravity="center"
          android:background="@drawable/order_item_op_gray_button"
          android:layout_width="@dimen/dp_72"
          android:layout_height="@dimen/dp_32"
          android:text="申诉"
          android:textColor="#ff333333"
          android:textSize="14dp"
          android:layout_marginEnd="@dimen/dp_10"
          />
      <TextView
          android:id="@+id/buyAgain"
          android:gravity="center"
          android:background="@drawable/order_item_op_gray_button"
          android:layout_width="@dimen/dp_72"
          android:layout_height="@dimen/dp_32"
          android:text="再来一单"
          android:textColor="#ff333333"
          android:textSize="14dp"
          android:layout_marginEnd="@dimen/dp_10"
          />
      <TextView
          android:id="@+id/confirmOrder"
          android:gravity="center"
          android:background="@drawable/order_item_op_blue_button"
          android:layout_width="@dimen/dp_72"
          android:layout_height="@dimen/dp_32"
          android:text="确认收货"
          android:textColor="#ff557ef7"
          android:textSize="14dp"
          />
    </LinearLayout>
  </LinearLayout>
</FrameLayout>