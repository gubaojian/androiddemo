<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_bottom_sheet">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:text="确认收货"
            android:textColor="#ff333333"
            android:textSize="16dp"
            android:layout_gravity="center"
            android:textStyle="bold"
            />
        <FrameLayout
            android:id="@+id/closePopup"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|end"
            android:paddingStart="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10">
            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:src="@mipmap/bottom_sheet_close"
                android:layout_gravity="center"
                />
        </FrameLayout>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F9F9F9"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_item_form"
            android:padding="15dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="15dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:id="@+id/materialCode"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:text="B323B"
                        android:textColor="#ff333333"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/waCode"
                        android:layout_marginStart="4dp"
                        android:background="@drawable/bg_flute_item"
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:text="BC瓦"
                        android:textColor="#ffffffff"
                        android:textSize="11dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:paddingStart="@dimen/dp_6"
                        android:paddingEnd="@dimen/dp_6"
                        android:lineSpacingMultiplier="1.1"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp_16"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="规格(长*宽mm)："
                        android:textColor="#ff999999"
                        android:textSize="14dp"
                        />
                    <TextView
                        android:id="@+id/paperSize"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="250 x 375"
                        android:textColor="#ff333333"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp_10"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="压线(mm)："
                        android:textColor="#ff999999"
                        android:textSize="14dp"
                        />
                    <TextView
                        android:id="@+id/lineDesc"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="xxxxxx"
                        android:textColor="#ff333333"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        />
                </LinearLayout>

            </LinearLayout>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/purchaseAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:text="300"
                    android:textColor="#ff333333"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="张"
                    android:textColor="#ff999999"
                    android:textSize="12dp"
                    />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_marginTop="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:text="确认收货前请再次确认已完成线下签收流程，若有少发、多发、质量问题等情况，可提交订单申诉。"
            android:textColor="#ff999999"
            android:textSize="12dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/dp_40"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dp_40"
        android:paddingEnd="@dimen/dp_40">
        <Button
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_42"
            android:background="@drawable/btn_common_white_solid_selector"
            style="@style/RippleForeground"
            android:padding="7dp"
            android:paddingTop="7dp"
            android:text="取消"
            android:textColor="#333333"
            android:textStyle="bold"
            android:textSize="16dp"/>
        <View
            android:layout_width="25dp"
            android:layout_height="1dp"/>
        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_42"
            android:background="@drawable/btn_blue_common_solid_selector"
            style="@style/RippleForeground"
            android:padding="7dp"
            android:paddingTop="7dp"
            android:text="确定"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="16dp"/>
    </LinearLayout>
    <View
        android:id="@+id/bottomSpace"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
</LinearLayout>