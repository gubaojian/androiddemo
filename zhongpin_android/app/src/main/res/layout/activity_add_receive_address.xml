<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.zhongpin.mvvm_android.ui.login.RegisterActivity">
        <LinearLayout
            android:id="@+id/toolbar"
            style="@style/AppTheme.Toolbar"
            android:background="@color/transparent">
            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/back_black" />
            <TextView
                android:id="@+id/iv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="添加收货地址"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#333333"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#F9F9F9">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@drawable/bg_item_form">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_88"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_20"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/dp_20"
                            android:layout_marginHorizontal="@dimen/dp_20"
                            android:gravity="center_vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textColor="#D34545"
                                android:textSize="14dp"
                                android:text="*"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#333333"
                                android:textStyle="bold"
                                android:textSize="14dp"
                                android:text="收货人"
                                android:layout_marginStart="4dp"/>
                        </LinearLayout>
                        <EditText
                            android:id="@+id/contractName"
                            android:layout_marginTop="@dimen/dp_2"
                            android:layout_width="match_parent"
                            android:layout_height="44dp"
                            android:layout_marginHorizontal="@dimen/dp_20"
                            android:background="@null"
                            android:hint="请输入收货企业名称"
                            android:singleLine="true"
                            android:textColor="#333333"
                            android:textColorHint="#999999"
                            android:textSize="16dp"
                            android:inputType="text"
                            android:maxLength="50"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#F3F3f3"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_88"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_20"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/dp_20"
                            android:layout_marginHorizontal="@dimen/dp_20"
                            android:gravity="center_vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textColor="#D34545"
                                android:textSize="14dp"
                                android:text="*"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#333333"
                                android:textStyle="bold"
                                android:textSize="14dp"
                                android:text="联系电话"
                                android:layout_marginStart="4dp"/>
                        </LinearLayout>
                        <EditText
                            android:id="@+id/contractPhone"
                            android:layout_marginTop="@dimen/dp_2"
                            android:layout_width="match_parent"
                            android:layout_height="44dp"
                            android:layout_marginHorizontal="@dimen/dp_20"
                            android:background="@null"
                            android:hint="请输入联系电话"
                            android:singleLine="true"
                            android:textColor="#333333"
                            android:textColorHint="#999999"
                            android:textSize="16dp"
                            android:inputType="phone"
                            android:maxLength="11"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#F3F3f3"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_88"
                        android:orientation="vertical"
                        android:id="@+id/receiveAreaTextContainer">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_20"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/dp_20"
                            android:layout_marginHorizontal="@dimen/dp_20"
                            android:gravity="center_vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textColor="#D34545"
                                android:textSize="14dp"
                                android:text="*"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#333333"
                                android:textStyle="bold"
                                android:textSize="14dp"
                                android:text="收货地址"
                                android:layout_marginStart="4dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginTop="@dimen/dp_2"
                            android:layout_width="match_parent"
                            android:layout_height="44dp"
                            android:layout_marginHorizontal="@dimen/dp_20"
                            android:paddingTop="@dimen/dp_12"
                            android:paddingBottom="10dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">
                            <TextView
                                android:id="@+id/chooseShouHuoAreaText"
                                android:layout_width="wrap_content"
                                android:layout_height="22dp"
                                android:hint="请选择省市区"
                                android:singleLine="true"
                                android:textColor="#333333"
                                android:textColorHint="#999999"
                                android:textSize="16dp"/>
                            <View
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="match_parent"/>
                            <ImageView
                                android:layout_width="@dimen/dp_16"
                                android:layout_height="@dimen/dp_16"
                                android:src="@mipmap/choose_arrow_right"/>
                        </LinearLayout>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#F3F3f3"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_88"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_20"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/dp_20"
                            android:layout_marginHorizontal="@dimen/dp_20"
                            android:gravity="center_vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textColor="#D34545"
                                android:textSize="14dp"
                                android:text="*"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#333333"
                                android:textStyle="bold"
                                android:textSize="14dp"
                                android:text="详细地址"
                                android:layout_marginStart="4dp"/>
                        </LinearLayout>
                        <EditText
                            android:id="@+id/detailAddress"
                            android:layout_marginTop="@dimen/dp_2"
                            android:layout_width="match_parent"
                            android:layout_height="44dp"
                            android:layout_marginHorizontal="@dimen/dp_20"
                            android:background="@null"
                            android:hint="请输入详细地址"
                            android:singleLine="true"
                            android:textColor="#333333"
                            android:textColorHint="#999999"
                            android:textSize="16dp"
                            android:inputType="text"
                            android:maxLength="100"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginHorizontal="@dimen/dp_10"
                    android:background="@drawable/bg_item_form">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/dp_20"
                        android:paddingEnd="@dimen/dp_10"
                        android:background="@color/white">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="设为默认地址"
                            android:textColor="#ff333333"
                            android:textSize="14dp"
                            />
                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>
                        <com.kyleduo.switchbutton.SwitchButton
                            android:id="@+id/defaultSwitch"
                            style="@style/SwitchButtonStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            />
                    </LinearLayout>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:background="#F9F9F9"/>
            </LinearLayout>
        </ScrollView>-
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="135dp"
                android:layout_height="@dimen/dp_42"
                android:background="@drawable/btn_blue_common_solid_selector"
                android:padding="7dp"
                android:paddingTop="7dp"
                android:text="保存"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="16dp"/>
        </LinearLayout>



    </LinearLayout>
</FrameLayout>
