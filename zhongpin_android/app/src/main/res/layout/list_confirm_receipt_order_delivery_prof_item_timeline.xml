<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
  <LinearLayout
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="10dp">
    <com.github.vipulasri.timelineview.TimelineView
        android:id="@+id/timeline"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:markerSize="20dp"
        app:lineWidth="1dp"
        app:startLineColor="#BABABA"
        app:endLineColor="#BABABA"
        app:markerInCenter="false"
        app:lineStyle="dash"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="@dimen/dp_10"
        android:orientation="vertical">
      <TextView
          android:id="@+id/deliveryDate"
          android:layout_width="wrap_content"
          android:layout_height="20dp"
          android:text="2025-10-09 15:09"
          android:gravity="center_vertical"
          android:textColor="#ff333333"
          android:textSize="16dp"
          android:textStyle="bold"/>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:layout_marginBottom="@dimen/dp_10"
          android:background="@drawable/bg_order_item"
          android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/dp_15"
            android:paddingEnd="@dimen/dp_15"
            android:paddingVertical="@dimen/dp_15">
          <TextView
              android:id="@+id/deliveryStatusText"
              android:layout_width="wrap_content"
              android:layout_height="@dimen/dp_22"
              android:text="部分送达"
              android:gravity="center_vertical"
              android:textColor="#ff333333"
              android:textSize="16dp"
              android:textStyle="bold"/>
          <TextView
              android:id="@+id/signStatus"
              android:layout_width="wrap_content"
              android:layout_height="18dp"
              android:paddingHorizontal="7dp"
              android:background="@drawable/bg_order_feedback_ing"
              android:gravity="center"
              android:text="未签收"
              android:textColor="#ffffff"
              android:textSize="12dp"
              android:textStyle="bold"
              android:layout_marginStart="6dp"
              android:visibility="gone"
              tools:visibility="visible"
              />
          <TextView
              android:id="@+id/stockStatus"
              android:layout_width="wrap_content"
              android:layout_height="18dp"
              android:paddingHorizontal="7dp"
              android:background="@drawable/bg_order_feedback_done"
              android:gravity="center"
              android:text="已入库"
              android:textColor="#ffffff"
              android:textSize="12dp"
              android:textStyle="bold"
              android:layout_marginStart="6dp"
              android:visibility="gone"
              tools:visibility="visible"
              />
          <View
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="1"/>
          <TextView
              android:id="@+id/deliveryAmount"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="xx"
              android:textColor="#ff333333"
              android:textSize="16dp"
              android:textStyle="bold"
              />
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="张"
              android:textColor="#ff999999"
              android:textSize="12dp"
              />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/deliveryInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/dp_15"
            android:paddingBottom="8dp">
          <com.zhongpin.mvvm_android.view.image.viewer.DeliveryDetailGridImageViewer
              android:id="@+id/deliveryPhotos"
              android:layout_width="90dp"
              android:layout_height="90dp"/>
          <View
              android:layout_width="0dp"
              android:layout_weight="1"
              android:layout_height="1dp"
              />
        </LinearLayout>
      </LinearLayout>
    </LinearLayout>
  </LinearLayout>

  <View
      android:layout_width="match_parent"
      android:layout_height="5dp"/>
</LinearLayout>