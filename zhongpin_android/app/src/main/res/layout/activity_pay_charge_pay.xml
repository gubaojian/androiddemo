<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">
    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/toolbar"
            style="@style/AppTheme.Toolbar"
            android:background="@color/transparent">
            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/back_black" />
            <TextView
                android:id="@+id/iv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待支付"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#333333"/>
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="1dp"/>
            <TextView
                android:id="@+id/cancelPay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="取消支付"
                android:textColor="#333333"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_marginEnd="@dimen/dp_12"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/loadContainer"
            android:orientation="vertical">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#F9F9F9">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.zhongpin.mvvm_android.view.CountDownTextView
                        android:id="@+id/waitForTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="待付款剩余时间：12:00:00"
                        android:textColor="#ff999999"
                        android:textSize="12dp"
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_gravity="center"
                        />
                    <TextView
                        android:id="@+id/payAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥00.0"
                        android:textColor="#ff333333"
                        android:textSize="36dp"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_gravity="center"
                        />
                    <TextView
                        android:layout_marginStart="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_30"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="支付方式："
                        android:textColor="#ff333333"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        />
                    <LinearLayout
                        android:id="@+id/payViaAlipayContainer"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginHorizontal="@dimen/dp_20"
                        android:background="@drawable/bg_item_form">
                        <LinearLayout
                            android:id="@+id/payViaAlipay"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="@dimen/dp_15">
                            <ImageView
                                android:layout_width="@dimen/dp_20"
                                android:layout_height="@dimen/dp_20"
                                android:src="@mipmap/pay_alipay_ic"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="支付宝"
                                android:textColor="#ff333333"
                                android:textSize="14dp"
                                android:textStyle="bold"
                                android:layout_marginStart="10dp"
                                />
                            <View
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"/>
                            <ImageView
                                android:id="@+id/checkboxAlipay"
                                android:layout_width="@dimen/dp_16"
                                android:layout_height="@dimen/dp_16"
                                android:src="@mipmap/pay_item_checked"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/payViaWeChatContainer"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginHorizontal="@dimen/dp_20"
                        android:background="@drawable/bg_item_form">
                        <LinearLayout
                            android:id="@+id/payViaWeChat"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="@dimen/dp_15">
                            <ImageView
                                android:layout_width="@dimen/dp_20"
                                android:layout_height="@dimen/dp_20"
                                android:src="@mipmap/pay_wechat_ic"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="微信支付"
                                android:textColor="#ff333333"
                                android:textSize="14dp"
                                android:textStyle="bold"
                                android:layout_marginStart="10dp"
                                />
                            <View
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"/>
                            <ImageView
                                android:id="@+id/checkboxWeChat"
                                android:layout_width="@dimen/dp_16"
                                android:layout_height="@dimen/dp_16"
                                android:src="@mipmap/pay_item_un_checked"/>
                        </LinearLayout>
                    </LinearLayout>
                    <Button
                        android:id="@+id/btnSubmit"
                        android:layout_marginTop="@dimen/dp_50"
                        android:layout_marginBottom="@dimen/dp_50"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="135dp"
                        android:layout_height="@dimen/dp_42"
                        android:background="@drawable/btn_blue_common_solid_selector"
                        android:padding="7dp"
                        android:paddingTop="7dp"
                        android:text="前往支付"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="16dp"/>
                </LinearLayout>
            </ScrollView>

        </LinearLayout>
    </LinearLayout>
</FrameLayout>
