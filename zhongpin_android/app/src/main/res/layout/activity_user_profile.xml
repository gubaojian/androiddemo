<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">
    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/toolbar"
            style="@style/AppTheme.Toolbar"
            android:background="@color/transparent">
            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/back_black" />
            <TextView
                android:id="@+id/iv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="个人中心"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#333333"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/loadContainer"
            android:orientation="vertical">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#F9F9F9">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginHorizontal="@dimen/dp_10"
                        android:background="@drawable/bg_mine_form">
                        <LinearLayout
                            android:id="@+id/headerContainer"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingStart="@dimen/dp_20"
                            android:paddingEnd="@dimen/dp_20">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="头像"
                                android:textColor="#ff333333"
                                android:textSize="14dp"
                                android:textStyle="bold"
                                />
                            <View
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"/>
                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/headerImage"
                                android:layout_width="@dimen/dp_40"
                                android:layout_height="@dimen/dp_40"
                                android:src="@mipmap/ic_user_default"
                                android:layout_marginEnd="8dp"
                                />
                            <ImageView
                                android:layout_width="@dimen/dp_14"
                                android:layout_height="@dimen/dp_14"
                                android:src="@mipmap/about_arrow"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/userNickContainer"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingStart="@dimen/dp_20"
                            android:paddingEnd="@dimen/dp_20">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="昵称"
                                android:textColor="#ff333333"
                                android:textSize="14dp"
                                android:textStyle="bold"
                                />
                            <View
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_marginStart="@dimen/dp_40"/>
                            <TextView
                                android:id="@+id/userNick"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="xx"
                                android:textColor="#ff999999"
                                android:textSize="12dp"
                                android:layout_marginEnd="8dp"
                                />
                            <ImageView
                                android:layout_width="@dimen/dp_14"
                                android:layout_height="@dimen/dp_14"
                                android:src="@mipmap/about_arrow"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/phoneContainer"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingStart="@dimen/dp_20"
                            android:paddingEnd="@dimen/dp_20">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="手机号"
                                android:textColor="#ff333333"
                                android:textSize="14dp"
                                android:textStyle="bold"
                                />
                            <View
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"/>
                            <TextView
                                android:id="@+id/phone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="xxx****xxxx"
                                android:textColor="#ff999999"
                                android:textSize="12dp"
                                android:layout_marginEnd="8dp"
                                />
                            <ImageView
                                android:layout_width="@dimen/dp_14"
                                android:layout_height="@dimen/dp_14"
                                android:src="@mipmap/about_arrow"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/resetPassword"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingStart="@dimen/dp_20"
                            android:paddingEnd="@dimen/dp_20">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="登录密码"
                                android:textColor="#ff333333"
                                android:textSize="14dp"
                                android:textStyle="bold"
                                />
                            <View
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="修改登录密码"
                                android:textColor="#ff999999"
                                android:textSize="12dp"
                                android:layout_marginEnd="8dp"
                                />
                            <ImageView
                                android:layout_width="@dimen/dp_14"
                                android:layout_height="@dimen/dp_14"
                                android:src="@mipmap/about_arrow"
                                />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="@dimen/dp_50"
                        android:layout_marginBottom="@dimen/dp_20"
                        android:orientation="vertical"
                        android:gravity="center">
                        <Button
                            android:id="@+id/loginOut"
                            android:layout_width="135dp"
                            android:layout_height="42dp"
                            android:text="退出登录"
                            android:textColor="#333333"
                            android:textSize="16dp"
                            android:gravity="center"
                            android:background="@drawable/bg_white_button_ripple"
                            />
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>

        </LinearLayout>
    </LinearLayout>
</FrameLayout>
