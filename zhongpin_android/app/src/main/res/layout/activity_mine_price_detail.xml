<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">
    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/toolbar"
            style="@style/AppTheme.Toolbar"
            android:background="@color/transparent">
            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/back_black" />
            <TextView
                android:id="@+id/iv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="专属报价详情"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#333333"/>
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="1dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/loadContainer"
            android:orientation="vertical">
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#F9F9F9">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/shouHuoInfo"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginTop="@dimen/dp_15">
                            <View
                                android:layout_width="4dp"
                                android:layout_height="@dimen/dp_16"
                                android:background="@drawable/bg_item_title_label"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="22dp"
                                android:text="专属报价"
                                android:gravity="center_vertical"
                                android:textColor="#ff333333"
                                android:textSize="16dp"
                                android:textStyle="bold"
                                android:layout_marginStart="6dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginHorizontal="@dimen/dp_10"
                            android:layout_marginTop="@dimen/dp_10"
                            android:background="@drawable/bg_item_form">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="41dp"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:paddingStart="@dimen/dp_20"
                                android:paddingEnd="@dimen/dp_20"
                                android:id="@+id/materialCodeContainer">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="组合材质代码"
                                    android:textColor="#999999"
                                    android:textSize="14dp"
                                    />
                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"/>
                                <TextView
                                    android:id="@+id/name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="25dp"
                                    android:text="B323B"
                                    android:textColor="#ff333333"
                                    android:textSize="18dp"
                                    android:textStyle="bold"
                                    />
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/fluteText"
                                    android:layout_marginStart="4dp"
                                    android:background="@drawable/bg_flute_item"
                                    android:layout_width="wrap_content"
                                    android:layout_height="18dp"
                                    android:text="BC瓦"
                                    android:textColor="#ffffffff"
                                    android:textSize="11dp"
                                    android:textStyle="bold"
                                    android:gravity="center"
                                    android:paddingStart="@dimen/dp_6"
                                    android:paddingEnd="@dimen/dp_6"
                                    android:lineSpacingMultiplier="1.1"
                                    />
                                <TextView
                                    android:id="@+id/tagSpecialPrice"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="特价"
                                    android:textColor="#ffd83333"
                                    android:textSize="12dp"
                                    android:layout_marginStart="@dimen/dp_4"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="41dp"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:paddingStart="@dimen/dp_20"
                                android:paddingEnd="@dimen/dp_20">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="当前报价(元/㎡)"
                                    android:textColor="#999999"
                                    android:textSize="14dp"
                                    />
                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"/>
                                <TextView
                                    android:id="@+id/originPrice"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="￥2.35"
                                    android:textColor="#999999"
                                    android:textSize="14dp"
                                    />
                                <TextView
                                    android:id="@+id/price"
                                    android:layout_width="wrap_content"
                                    android:layout_height="20dp"
                                    android:text="￥2.12"
                                    android:textColor="#ff333333"
                                    android:textSize="14dp"
                                    android:textStyle="bold"
                                    />
                                <ImageView
                                    android:id="@+id/priceArrow"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/dp_4"
                                    android:src="@mipmap/home_platform_price_down"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="41dp"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:paddingStart="@dimen/dp_20"
                                android:paddingEnd="@dimen/dp_20">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="订购次数"
                                    android:textColor="#999999"
                                    android:textSize="14dp"
                                    />
                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"/>
                                <TextView
                                    android:id="@+id/purchaseTimes"
                                    android:layout_width="wrap_content"
                                    android:layout_height="20dp"
                                    android:text="xxxxxxxxxxx"
                                    android:textColor="#ff333333"
                                    android:textSize="14dp"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="41dp"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:paddingStart="@dimen/dp_20"
                                android:paddingEnd="@dimen/dp_20">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="上次订购"
                                    android:textColor="#999999"
                                    android:textSize="14dp"
                                    />
                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"/>
                                <TextView
                                    android:id="@+id/lastOrderTime"
                                    android:layout_width="wrap_content"
                                    android:layout_height="20dp"
                                    android:text="xxxxxxxxxxx"
                                    android:textColor="#ff333333"
                                    android:textSize="14dp"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="41dp"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:paddingStart="@dimen/dp_20"
                                android:paddingEnd="@dimen/dp_20">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="最近更新"
                                    android:textColor="#999999"
                                    android:textSize="14dp"
                                    />
                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"/>
                                <TextView
                                    android:id="@+id/updateDate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="20dp"
                                    android:text="xxxxxxxxxxx"
                                    android:textColor="#ff333333"
                                    android:textSize="14dp"
                                    />
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/relateMaterialListContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginTop="@dimen/dp_15">
                            <View
                                android:layout_width="4dp"
                                android:layout_height="@dimen/dp_16"
                                android:background="@drawable/bg_item_title_label"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="22dp"
                                android:text="关联材质"
                                android:gravity="center_vertical"
                                android:textColor="#ff333333"
                                android:textSize="16dp"
                                android:textStyle="bold"
                                android:layout_marginStart="6dp"/>
                            <View
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="1dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/dp_20"
                                android:layout_marginTop="@dimen/dp_10"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:gravity="center">
                                    <ImageView
                                        android:layout_width="@dimen/dp_12"
                                        android:layout_height="@dimen/dp_8"
                                        android:src="@mipmap/paper_mianzhi"
                                        android:layout_marginEnd="@dimen/dp_6"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="面纸"
                                        android:textColor="#333333"
                                        android:textSize="14dp"
                                        android:gravity="center"
                                        />
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:gravity="center">
                                    <ImageView
                                        android:layout_width="@dimen/dp_12"
                                        android:layout_height="@dimen/dp_8"
                                        android:src="@mipmap/paper_wazhi"
                                        android:layout_marginEnd="@dimen/dp_6"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="瓦纸"
                                        android:textColor="#333333"
                                        android:textSize="14dp"
                                        android:gravity="center"
                                        />
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:gravity="center">
                                    <ImageView
                                        android:layout_width="@dimen/dp_12"
                                        android:layout_height="@dimen/dp_8"
                                        android:src="@mipmap/paper_zhongjia"
                                        android:layout_marginEnd="@dimen/dp_6"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="中夹"
                                        android:textColor="#333333"
                                        android:textSize="14dp"
                                        android:gravity="center"
                                        />
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:gravity="center">
                                    <ImageView
                                        android:layout_width="@dimen/dp_12"
                                        android:layout_height="@dimen/dp_8"
                                        android:src="@mipmap/paper_dizhi"
                                        android:layout_marginEnd="@dimen/dp_6"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="底纸"
                                        android:textColor="#333333"
                                        android:textSize="14dp"
                                        android:gravity="center"
                                        />
                                </LinearLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_50"
                                android:layout_marginHorizontal="@dimen/dp_10"
                                android:layout_marginTop="@dimen/dp_10"
                                android:background="@drawable/bg_home_platform_price_top"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="match_parent"
                                    android:text="原纸品名"
                                    android:textColor="#999999"
                                    android:textSize="14dp"
                                    android:gravity="center"
                                    />
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="match_parent"
                                    android:text="材质代码"
                                    android:textColor="#999999"
                                    android:textSize="14dp"
                                    android:gravity="center"
                                    />
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="match_parent"
                                    android:text="克重(g)"
                                    android:textColor="#999999"
                                    android:textSize="14dp"
                                    android:gravity="center"
                                    />
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="match_parent"
                                    android:text="单价(元/㎡)"
                                    android:textColor="#999999"
                                    android:textSize="14dp"
                                    android:gravity="center"
                                    />
                            </LinearLayout>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#F3F3F3"
                                android:layout_marginHorizontal="@dimen/dp_10"/>
                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/relateMaterialListView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:nestedScrollingEnabled="false"
                                android:paddingBottom="80dp"
                                android:clipToPadding="false"
                                android:overScrollMode="never"/>
                        </LinearLayout>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="40dp"/>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
