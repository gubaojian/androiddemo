<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/containerView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    tools:background="@color/teal_200">

    <ImageView
        android:id="@+id/iv_curr_price_left"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginStart="4dp"
        android:src="@mipmap/trade_ic_option_curr_price_left"
        tools:background="#8ECD28" />

    <TextView
        android:id="@+id/tv_current_price_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="4dp"
        android:gravity="center"
        android:includeFontPadding="false"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        tools:background="#8A53B9"
        android:textColor="@color/front_bg_color"
        android:textSize="11sp"
        tools:text="现价 109.45" />

    <ImageView
        android:id="@+id/iv_curr_price_right"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginEnd="4dp"
        android:src="@mipmap/trade_ic_option_curr_price_right"
        tools:background="#8ECD28" />

</LinearLayout>

